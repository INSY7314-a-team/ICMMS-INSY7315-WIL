@model ICCMS_Web.Models.LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="login-form-wrapper">

    <h2 class="login-title mb-4">Login to ICMMS</h2>

    <!-- ðŸ”” SESSION EXPIRED / AUTH ERROR -->
    @if (TempData["AuthErrorMessage"] != null)
    {
        <div class="alert alert-warning text-center fw-bold mb-3">
            <i class="bi bi-exclamation-triangle"></i>
            @TempData["AuthErrorMessage"]
        </div>
    }

    <!-- Lockout Message -->
    <div id="lockoutMessage" class="alert alert-warning" style="display: none;">
        <h5>Account Temporarily Locked</h5>
        <p>Please wait <span id="countdown">5:00</span> minutes before trying again.</p>
        <div class="progress">
            <div id="progressBar" class="progress-bar" role="progressbar" style="width: 100%"></div>
        </div>
    </div>

    <form id="loginForm" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" id="emailInput" placeholder="you@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" id="passwordInput" type="password" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-4">
            <input asp-for="RememberMe" class="form-check-input" id="rememberMeInput" />
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary" id="loginButton">Login</button>
        </div>
    </form>

</div>

@section Scripts {
<script>
    document.getElementById('loginForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        console.log('[Login] Form submitted');

        const email = document.getElementById('emailInput').value;
        const password = document.getElementById('passwordInput').value;
        const submitBtn = e.target.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;

        try {
            submitBtn.textContent = 'Logging in...';
            submitBtn.disabled = true;

            console.log('[Login] Attempting Firebase sign-in for', email);
            const userCredential = await firebase.auth().signInWithEmailAndPassword(email, password);
            const user = userCredential.user;
            console.log('[Login] Firebase sign-in successful:', user.email);

            const idToken = await user.getIdToken();
            console.log('[Login] Got Firebase ID token');

            const response = await fetch('/Auth/VerifyToken', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ idToken })
            });

            console.log('[Login] API response status:', response.status);
            const result = await response.json();
            console.log('[Login] API response:', result);

            if (result.success) {
                const role = result.user?.role?.toLowerCase();
                console.log('[Login] Verified user role:', role);
                if (role === 'client') window.location.href = '/Clients';
                else if (role === 'admin') window.location.href = '/Users';
                else window.location.href = '/';
            } else {
                alert(result.message || 'Login failed');
            }
        } catch (error) {
            console.error('[Login] Error:', error);
            alert('Login failed: ' + error.message);
        } finally {
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;
        }
    });
</script>
}

<style>
    .login-form-wrapper {
        max-width: 100%;
        width: 100%;
        text-align: left;
        padding: 0 1rem;
    }

    .login-title {
        text-align: center;
        font-weight: 700;
        color: #222;
        font-size: 1.6rem;
    }

    form {
        margin-top: 1.5rem;
    }

    input.form-control {
        height: 48px;
        border-radius: 10px;
        font-size: 1rem;
    }

    .btn-primary {
        height: 48px;
        font-size: 1.05rem;
    }
</style>
