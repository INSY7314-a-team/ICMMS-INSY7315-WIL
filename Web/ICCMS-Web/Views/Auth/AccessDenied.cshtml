@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="access-denied-card">
                <div class="text-center">
                    <div class="access-denied-icon">
                        <i class="fa-solid fa-lock"></i>
                    </div>
                    <h1 class="access-denied-title">Access Denied</h1>
                    <p class="access-denied-message">
                        You don't have permission to access this resource.
                    </p>

                    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                    {
                        <p class="return-url-info">
                            <strong>Requested URL:</strong> @ViewBag.ReturnUrl
                        </p>
                    }

                    <div class="access-denied-actions">
                        <a href="@Url.Action("Dashboard", "ProjectManager")" class="btn btn-primary">
                            <i class="fa-solid fa-home"></i>
                            Go to Dashboard
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left"></i>
                            Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .access-denied-card {
        background: linear-gradient(135deg, #1A1B25 0%, #2A2B35 100%);
        border-radius: 15px;
        padding: 3rem 2rem;
        color: white;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        margin-top: 5rem;
        border: 2px solid #F7EC59;
    }

    .access-denied-icon {
        font-size: 4rem;
        color: #FF6663;
        margin-bottom: 1.5rem;
    }

    .access-denied-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #FF6663;
        margin-bottom: 1rem;
    }

    .access-denied-message {
        font-size: 1.2rem;
        color: #ccc;
        margin-bottom: 2rem;
    }

    .return-url-info {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        color: #F7EC59;
        font-family: monospace;
        word-break: break-all;
    }

    .access-denied-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: linear-gradient(135deg, #F7EC59 0%, #E6D547 100%);
        border: none;
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: #1A1B25;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(247, 236, 89, 0.4);
        color: #1A1B25;
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        color: #6c757d;
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background: #6c757d;
        color: white;
        transform: translateY(-2px);
    }

    @@media(max - width: 768px) {
            .access-denied-actions {
                flex-direction: column;
                align-items: center;
            }

            .access-denied-actions .btn {
                width: 100%;
                max-width: 300px;
            }
        }
    </style>
