@model ICCMS_Web.Models.QuotationDto

<div class="modal fade" id="quoteWizardModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Generate New Quote</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <!-- Form for creating a new quotation -->
        <form id="quote-form">
          <!-- Project assignment -->
          <div class="mb-3">
            <label asp-for="ProjectId" class="form-label">Project</label>
            <input asp-for="ProjectId" class="form-control" placeholder="Enter ProjectId" />
          </div>

          <!-- Client assignment -->
          <div class="mb-3">
            <label asp-for="ClientId" class="form-label">Client</label>
            <input asp-for="ClientId" class="form-control" placeholder="Enter ClientId (UserId)" />
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
          </div>

          <!-- Valid Until -->
          <div class="mb-3">
            <label asp-for="ValidUntil" class="form-label">Valid Until</label>
            <input asp-for="ValidUntil" type="date" class="form-control" />
          </div>

          <!-- Quote Items (basic list for now) -->
          <div class="mb-3">
            <label class="form-label">Items</label>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Unit Price</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody id="quote-items">
                <tr>
                  <td><input name="Items[0].Name" class="form-control" /></td>
                  <td><input name="Items[0].Quantity" type="number" class="form-control" /></td>
                  <td><input name="Items[0].UnitPrice" type="number" step="0.01" class="form-control" /></td>
                  <td><input name="Items[0].LineTotal" type="number" step="0.01" class="form-control" readonly /></td>
                </tr>
              </tbody>
            </table>
            <button type="button" class="btn btn-outline-primary btn-sm" id="btn-add-item">
              Add Item
            </button>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" id="btn-save-quote">Save Quote</button>
      </div>
    </div>
  </div>
</div>

<script>
  console.log("[QuoteWizard] Ready");

  // Add extra item row dynamically
  document.getElementById("btn-add-item")?.addEventListener("click", () => {
      console.log("[QuoteWizard] Adding new item row");
      const tbody = document.getElementById("quote-items");
      const index = tbody.querySelectorAll("tr").length;
      const row = document.createElement("tr");
      row.innerHTML = `
        <td><input name="Items[${index}].Name" class="form-control" /></td>
        <td><input name="Items[${index}].Quantity" type="number" class="form-control" /></td>
        <td><input name="Items[${index}].UnitPrice" type="number" step="0.01" class="form-control" /></td>
        <td><input name="Items[${index}].LineTotal" type="number" step="0.01" class="form-control" readonly /></td>
      `;
      tbody.appendChild(row);
  });
</script>
