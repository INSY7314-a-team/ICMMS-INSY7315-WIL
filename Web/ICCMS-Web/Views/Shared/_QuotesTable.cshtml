@model List<ICCMS_Web.Models.QuotationDto>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Description</th>
                <th>Status</th>
                <th>Client</th>
                <th>Created</th>
                <th>Approved</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Description</td>
                <td>
                    <span class="badge 
                        @(q.Status.Equals("Accepted", StringComparison.OrdinalIgnoreCase) ? "bg-success" : 
                          q.Status.Equals("Pending", StringComparison.OrdinalIgnoreCase) ? "bg-warning text-dark" : 
                          q.Status.Equals("Rejected", StringComparison.OrdinalIgnoreCase) ? "bg-danger" : "bg-secondary")">
                        @q.Status
                    </span>
                </td>
                <td>@q.ClientId</td>
                <td>@q.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(q.ApprovedAt.HasValue ? q.ApprovedAt.Value.ToString("yyyy-MM-dd HH:mm") : "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="text-muted">No quotes available in this category.</div>
}
