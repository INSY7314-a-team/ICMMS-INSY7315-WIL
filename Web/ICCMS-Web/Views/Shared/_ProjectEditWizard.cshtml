@* No model required - data loaded via JavaScript *@

<!-- Project Edit Wizard Modal -->
<div class="modal fade" id="projectEditWizardModal" tabindex="-1" aria-labelledby="projectEditWizardModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="d-flex align-items-center gap-2">
                    <h5 class="modal-title mb-0" id="projectEditWizardModalLabel">
                        <i class="fa-solid fa-edit me-2" style="color: #F7EC59;"></i>Edit Project
                    </h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Wizard Progress Indicator -->
                <div class="wizard-progress mb-4">
                    <div class="progress" style="height: 8px; border-radius: 10px; background: rgba(247, 236, 89, 0.15);">
                        <div class="progress-bar" role="progressbar" style="width: 0%; background: linear-gradient(135deg, #F7EC59 0%, #E6D547 100%); border-radius: 10px;" id="editWizardProgress"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <small style="color: #F7EC59; font-weight: 500;">Step <span id="editCurrentStep">1</span> of 5</small>
                        <small style="color: var(--text-primary); font-weight: 500;" id="editStepTitle">Basic Information</small>
                    </div>
                </div>

                <!-- Wizard Steps -->
                <form id="projectEditForm">
                    <!-- Step 1: Basic Information -->
                    <div class="wizard-step" id="editStep1">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-info-circle me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Basic Project Information</h6>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="editProjectName" class="form-label">Project Name <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="editProjectName" name="Name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editClientSelect" class="form-label">Client <span
                                        class="text-danger">*</span></label>
                                <select class="form-select" id="editClientSelect" name="ClientId" required>
                                    <option value="">Select a client...</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="editProjectDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="editProjectDescription" name="Description" rows="3"
                                    placeholder="Brief description of the project..."></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Budget & Timeline -->
                    <div class="wizard-step d-none" id="editStep2">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-calendar-alt me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Budget & Timeline</h6>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="editBudgetPlanned" class="form-label">Planned Budget <span
                                        class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input type="number" class="form-control" id="editBudgetPlanned" name="BudgetPlanned"
                                        step="0.01" min="0" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="editStartDate" class="form-label">Start Date <span
                                        class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="editStartDate" name="StartDate" required>
                            </div>
                            <div class="col-md-6">
                                <label for="editEndDatePlanned" class="form-label">Planned End Date <span
                                        class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="editEndDatePlanned" name="EndDatePlanned"
                                    required>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3: Phases -->
                    <div class="wizard-step d-none" id="editStep3">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-layer-group me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Phases</h6>
                        </div>
                        <div id="editPhasesContainer" class="mb-3"></div>
                        <button type="button" class="btn" id="editAddPhaseBtn" style="background: #F7EC59; color: #1A1B25; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                            <i class="fa-solid fa-plus me-1"></i>Add Phase
                        </button>
                    </div>

                    <!-- Step 4: Tasks & Contractors -->
                    <div class="wizard-step d-none" id="editStep4">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-tasks me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Tasks & Contractors</h6>
                        </div>
                        <div id="editTasksContainer" class="mb-3"></div>
                        <button type="button" class="btn" id="editAddTaskBtn" style="background: #F7EC59; color: #1A1B25; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                            <i class="fa-solid fa-plus me-1"></i>Add Task
                        </button>
                    </div>

                    <!-- Step 5: Review & Finalize -->
                    <div class="wizard-step d-none" id="editStep5">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-check-circle me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Review & Finalize</h6>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Project Summary</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Name:</strong> <span id="editReviewName">-</span></p>
                                        <p><strong>Client:</strong> <span id="editReviewClient">-</span></p>
                                        <p><strong>Budget:</strong> R<span id="editReviewBudget">-</span></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Start Date:</strong> <span id="editReviewStartDate">-</span></p>
                                        <p><strong>End Date:</strong> <span id="editReviewEndDate">-</span></p>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <strong>Description:</strong>
                                    <p class="text-muted" id="editReviewDescription">-</p>
                                </div>
                                <div class="mt-3">
                                    <strong>Phases & Tasks:</strong>
                                    <div id="editReviewPhaseTaskGroups"></div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="button" class="btn" id="editSaveAsDraftBtn" style="background: #6C757D; color: #FFFFFF; border: none; border-radius: 8px; padding: 10px 20px; font-weight: 600; margin-right: 10px;">
                                <i class="fa-solid fa-save me-2"></i>Save as Draft
                            </button>
                            <small class="text-muted d-block mt-2">Save your progress and continue later</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-bs-dismiss="modal" style="background: transparent; color: #CCCCCC; border: 1px solid #CCCCCC; border-radius: 8px; padding: 8px 16px;">Cancel</button>
                <button type="button" class="btn" id="editPrevStepBtn" style="display: none; background: #6C757D; color: #FFFFFF; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                    <i class="fa-solid fa-arrow-left me-1"></i>Previous
                </button>
                <button type="button" class="btn" id="editNextStepBtn" style="background: #F7EC59; color: #1A1B25; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                    Next <i class="fa-solid fa-arrow-right ms-1"></i>
                </button>
                <button type="button" class="btn" id="editFinalizeProjectBtn" style="display: none; background: #28A745; color: #FFFFFF; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                    <i class="fa-solid fa-check me-1"></i>Finalize
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="editLoadingOverlay" class="loading-overlay" style="display: none;">
    <div class="spinner-border text-warning" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-2">Processing...</p>
</div>
