<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ICCMS</title>

    <!-- Core Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/session-expired.css" asp-append-version="true" />
    <!-- Font Awesome 6.4.0 - Primary CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
    
    <!-- Font Awesome 6.4.0 - Fallback CDN (without integrity check to avoid hash mismatch) -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.0/css/all.css" 
          crossorigin="anonymous" />

    <style>
        /* === BASIC LAYOUT === */
        body {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
            background: #1A1B25;
            transition: margin-left 0.3s ease;
        }

        /* === SIDEBAR === */
        #sidebar {
            width: 250px;
            background: #1A1B25;
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            transition: width 0.3s ease;
            z-index: 200;
            border: 2px solid #F7EC59;
            border-radius: 4px;
        }

        #sidebar.collapsed {
            width: 70px;
        }

        /* Hide text in collapsed state */
        #sidebar.collapsed ul li a span {
            display: none;
        }

        #sidebar.collapsed .SidebarUserControlsLogin span,
        #sidebar.collapsed .SidebarUserControls span {
            display: none;
        }

        /* Center icons in collapsed state */
        #sidebar.collapsed ul li a {
            justify-content: center;
            padding: 0.9rem 0.5rem;
        }

        #sidebar.collapsed .SidebarUserControlsLogin a,
        #sidebar.collapsed .SidebarUserControls a {
            justify-content: center;
            padding: 0.9rem 0.5rem;
        }

        /* Adjust brand text in collapsed state */
        #sidebar.collapsed .brand {
            font-size: 0.8rem;
            padding: 0.5rem;
        }

        #sidebar .brand {
            font-weight: 700;
            font-size: 1.3rem;
            padding: 1rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        #sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
            flex-grow: 1;
        }

        #sidebar ul li a {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #ccc;
            padding: 0.9rem 1rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        #sidebar ul li a:hover,
        #sidebar ul li a.active {
            background: #2A2B35;
            color: #F7EC59;
        }

        #sidebar ul li a i {
            min-width: 20px;
            text-align: center;
        }

        /* === TOGGLE ARROW === */
        #sidebar-toggle {
            background: none;
            border: none;
            color: #fff;
            padding: 0.75rem;
            cursor: pointer;
            font-size: 1.1rem;
            transition: transform 0.3s ease;
        }

        #sidebar-toggle:hover {
            color: #F7EC59;
        }

        #sidebar.collapsed #sidebar-toggle i {
            transform: rotate(180deg);
        }

        .SidebarUserControls {
            border: 2px solid #FF6663;
            border-radius: 4px;
            background-color: #FF6663;
            color: #ffffff;
            font-size: 1.2rem;
            font-weight: 600;
            text-align: center;
            margin-left: 4rem;
            margin-right: 4rem;
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .SidebarUserControlsLogin {
            border: 2px solid #226F54;
            border-radius: 4px;
            background-color: #226F54;
            color: #ffffff;
            font-size: 1.2rem;
            font-weight: 600;
            text-align: center;
            margin-left: 4rem;
            margin-right: 4rem;
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .SidebarUserControlsLogin a,
        .SidebarUserControls a {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #ffffff;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        .SidebarUserControlsLogin a:hover,
        .SidebarUserControls a:hover {
            color: #F7EC59;
        }

        .SidebarUserControlsLogin {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #226F54;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s ease;
        }

        /* Adjust SidebarUserControls for collapsed state */
        #sidebar.collapsed .SidebarUserControlsLogin,
        #sidebar.collapsed .SidebarUserControls {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        /* === HEADER === */
        #main-header {
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            height: 60px;
            background: #2A2B35;
            border-bottom: 1px solid #F7EC59;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            z-index: 100;
            transition: left 0.3s ease;
            border: 2px solid #F7EC59;
            border-radius: 4px;
            color: white;
        }

        #sidebar.collapsed+#main-header {
            left: 70px;
        }

        /* === MAIN CONTENT === */
        #content-area {
            margin-left: 250px;
            padding: 2rem 2rem 2rem 2rem;
            flex: 1;
            transition: margin-left 0.3s ease;
        }

        #sidebar.collapsed~#content-area {
            margin-left: 70px;
        }

        .alert {
            border-radius: 8px;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
    <!-- ===== SIDEBAR ===== -->
@if (User.Identity.IsAuthenticated)
{
        <aside id="sidebar">
            <div class="brand">ICCMS</div>
            <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Messages - Available to all authenticated users -->
                    <li>
                        <a asp-controller="Messages" asp-action="Index">
                            <i class="fa-solid fa-envelope"></i>
                            <span>Messages</span>
                            <span class="badge bg-warning ms-2" id="unreadCount" style="display: none;">0</span>
                        </a>
                    </li>
                    
                    <!-- Admin Dashboard Options (Admin and Tester) -->
                    if (User.IsInRole("Admin") || User.IsInRole("Tester"))
                    {
                        <li><a asp-controller="SystemOverview" asp-action="Index"><i class="fa-solid fa-tachometer-alt"></i><span>Dashboard</span></a></li>
                        <li><a asp-controller="Users" asp-action="Index"><i class="fa-solid fa-users"></i><span>Users Overview</span></a></li>
                        <li><a asp-controller="AuditLogs" asp-action="Index"><i class="fa-solid fa-clipboard-list"></i><span>Audit Logs Overview</span></a></li>
                        <li><a asp-controller="MessageDashboard" asp-action="Dashboard"><i class="fa-solid fa-envelope-open"></i><span>Messages Overview</span></a></li>
                        <li><a asp-controller="Documents" asp-action="Index"><i class="fa-solid fa-file-alt"></i><span>Documents Overview</span></a></li>
                    }
                    
                    <!-- Project Manager Dashboard -->
                    if (User.IsInRole("Project Manager"))
                    {
                        <li><a asp-controller="ProjectManager" asp-action="Dashboard"><i class="fa-solid fa-gauge"></i><span>Dashboard</span></a></li>
                    }
                    
                    <!-- Contractor Dashboard -->
                    if (User.IsInRole("Contractor"))
                    {
                        <li>
                            <a asp-controller="Contractor" asp-action="Dashboard" aria-label="My Tasks">
                                <i class="fa-solid fa-helmet-safety" aria-hidden="true"></i>
                                <span>My Tasks</span>
                            </a>
                        </li>
                    }
                    
                    <!-- Client Dashboard -->
                    if (User.IsInRole("Client"))
                    {
                        <li><a asp-controller="Clients" asp-action="Index"><i class="fa-solid fa-user"></i><span>Dashboard</span></a></li>
                    }
                    
                    <!-- Tester-specific options -->
                    if (User.IsInRole("Tester"))
                    {
                        <li><a asp-controller="Testing" asp-action="Index"><i class="fa-solid fa-flask"></i><span>Testing</span></a></li>
                        <li><a asp-controller="MessagesTest" asp-action="Index"><i class="fa-solid fa-comments"></i><span>Message Test</span></a></li>
                    }
                }
            </ul>


            <div class="SidebarUserControls">
                <a asp-controller="Auth" asp-action="Logout"><i
                        class="fa-solid fa-right-from-bracket"></i><span>Logout</span></a>
            </div>
            
            <button id="sidebar-toggle"><i class="fa-solid fa-chevron-left"></i></button>
        </aside>
    }
        <!-- ===== HEADER ===== -->
