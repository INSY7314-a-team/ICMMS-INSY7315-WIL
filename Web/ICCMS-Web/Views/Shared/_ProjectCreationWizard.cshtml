@model ICCMS_Web.Models.DashboardViewModel

<!-- Project Creation Wizard Modal -->
<div class="modal fade" id="projectCreationWizardModal" tabindex="-1" aria-labelledby="projectCreationWizardModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="d-flex align-items-center gap-2">
                    <h5 class="modal-title mb-0" id="projectCreationWizardModalLabel">
                        <i class="fa-solid fa-plus-circle me-2" style="color: #F7EC59;"></i>Create Project
                    </h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Wizard Progress Indicator -->
                <div class="wizard-progress mb-4">
                    <div class="progress" style="height: 8px; border-radius: 10px; background: rgba(247, 236, 89, 0.15);">
                        <div class="progress-bar" role="progressbar" style="width: 0%; background: linear-gradient(135deg, #F7EC59 0%, #E6D547 100%); border-radius: 10px;" id="wizardProgress"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <small style="color: #F7EC59; font-weight: 500;">Step <span id="currentStep">1</span> of 5</small>
                        <small style="color: var(--text-primary); font-weight: 500;" id="stepTitle">Basic Information</small>
                    </div>
                </div>

                <!-- Wizard Steps -->
                <form id="projectCreationForm">
                    <!-- Step 1: Basic Information -->
                    <div class="wizard-step" id="step1">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-info-circle me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Basic Project Information</h6>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="projectName" class="form-label">Project Name <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="projectName" name="Name" required>
                                <div class="invalid-feedback">Please provide a project name.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="clientSelect" class="form-label">Client <span
                                        class="text-danger">*</span></label>
                                <select class="form-select" id="clientSelect" name="ClientId" required>
                                    <option value="">Select a client...</option>
                                </select>
                                <div class="invalid-feedback">Please select a client.</div>
                            </div>
                            <div class="col-12">
                                <label for="projectDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="projectDescription" name="Description" rows="3"
                                    placeholder="Brief description of the project..."></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Step 2: Budget & Timeline -->
                    <div class="wizard-step d-none" id="step2">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-calendar-alt me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Budget & Timeline</h6>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="budgetPlanned" class="form-label">Planned Budget <span
                                        class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="budgetPlanned" name="BudgetPlanned"
                                        min="0" step="0.01" required>
                                </div>
                                <div class="invalid-feedback">Please enter a valid budget amount.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="startDate" class="form-label">Start Date <span
                                        class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="startDate" name="StartDate" required>
                                <div class="invalid-feedback">Please select a start date.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="endDatePlanned" class="form-label">Planned End Date <span
                                        class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="endDatePlanned" name="EndDatePlanned"
                                    required>
                                <div class="invalid-feedback">Please select an end date.</div>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3: Phases -->
                    <div class="wizard-step d-none" id="step3">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-layer-group me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Phases</h6>
                        </div>
                        <div id="phasesContainer" class="mb-3"></div>
                        <button type="button" class="btn" id="addPhaseBtn" style="background: #F7EC59; color: #1A1B25; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                            <i class="fa-solid fa-plus me-1"></i>Add Phase
                        </button>
                    </div>

                    <!-- Step 4: Tasks & Contractors -->
                    <div class="wizard-step d-none" id="step4">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-tasks me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Tasks & Contractors</h6>
                        </div>
                        <div id="tasksContainer" class="mb-3"></div>
                        <button type="button" class="btn" id="addTaskBtn" style="background: #F7EC59; color: #1A1B25; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                            <i class="fa-solid fa-plus me-1"></i>Add Task
                        </button>
                    </div>

                    <!-- Step 5: Review & Finalize -->
                    <div class="wizard-step d-none" id="step5">
                        <div class="d-flex align-items-center mb-4" style="border-bottom: 2px solid #F7EC59; padding-bottom: 10px;">
                            <i class="fa-solid fa-check-circle me-3" style="color: #F7EC59; font-size: 1.2rem;"></i>
                            <h6 class="mb-0" style="color: #F7EC59; font-weight: 600; font-size: 1.1rem;">Review & Finalize</h6>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Project Summary</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Name:</strong> <span id="reviewName">-</span></p>
                                        <p><strong>Client:</strong> <span id="reviewClient">-</span></p>
                                        <p><strong>Budget:</strong> R<span id="reviewBudget">-</span></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Start Date:</strong> <span id="reviewStartDate">-</span></p>
                                        <p><strong>End Date:</strong> <span id="reviewEndDate">-</span></p>
                                        <p><strong>Status:</strong> <span id="reviewStatus">-</span></p>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <p><strong>Description:</strong></p>
                                    <p class="text-muted" id="reviewDescription">-</p>
                                </div>
                                <div class="mt-4">
                                    <h6 class="mb-2">
                                        <i class="fa-solid fa-diagram-project me-2 text-warning"></i>
                                        Phases & Tasks
                                    </h6>
                                    <div id="reviewPhaseTaskGroups"></div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="button" class="btn" id="saveAsDraftBtn" style="background: #6C757D; color: #FFFFFF; border: none; border-radius: 8px; padding: 10px 20px; font-weight: 600; margin-right: 10px;">
                                <i class="fa-solid fa-save me-2"></i>Save as Draft
                            </button>
                            <small class="text-muted d-block mt-2">Save your progress and continue later</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-bs-dismiss="modal" style="background: transparent; color: #CCCCCC; border: 1px solid #CCCCCC; border-radius: 8px; padding: 8px 16px;">Cancel</button>
                <button type="button" class="btn" id="prevStepBtn" style="display: none; background: #6C757D; color: #FFFFFF; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                    <i class="fa-solid fa-arrow-left me-1"></i>Previous
                </button>
                <button type="button" class="btn" id="nextStepBtn" style="background: #F7EC59; color: #1A1B25; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                    Next <i class="fa-solid fa-arrow-right ms-1"></i>
                </button>
                <button type="button" class="btn" id="createProjectBtn" style="display: none; background: #28A745; color: #FFFFFF; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 600;">
                    <i class="fa-solid fa-check me-1"></i>Finalize
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="wizardLoadingOverlay" style="display: none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="mt-2">Creating project...</p>
</div>

<script>
    // Pass clients data to the wizard JavaScript
    window.dashboardClients = @Html.Raw(Json.Serialize(Model.Clients));
</script>
