<!-- Progress Report Modal -->
<div class="modal fade" id="progressReportModal" tabindex="-1" aria-labelledby="progressReportModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="progressReportModalLabel">
                    <i class="fa-solid fa-chart-line me-2"></i>Submit Progress Report
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="progressReportForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="progressReportTaskId" name="taskId" value="" />

                    <!-- Task Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">Task Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 id="progressModalTaskName">Loading...</h6>
                                    <p class="text-muted mb-1">Project: <span
                                            id="progressModalProjectName">Loading...</span>
                                    </p>
                                    <p class="text-muted mb-0">Description: <span
                                            id="progressModalTaskDescription">Loading...</span></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Report Form -->
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="progressDescription" class="form-label">Work Description *</label>
                            <textarea class="form-control" id="progressDescription" name="description" rows="4"
                                placeholder="Describe the work completed..." required></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="hoursWorked" class="form-label">Hours Worked *</label>
                            <input type="number" class="form-control" id="hoursWorked" name="hoursWorked" step="0.1"
                                min="0.1" placeholder="0.0" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="progressPercentage" class="form-label">Progress Percentage</label>
                            <input type="number" class="form-control" id="progressPercentage" name="progressPercentage"
                                min="0" max="100" placeholder="0">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="additionalNotes" class="form-label">Additional Notes</label>
                            <textarea class="form-control" id="additionalNotes" name="additionalNotes" rows="3"
                                placeholder="Any additional notes or comments..."></textarea>
                        </div>
                    </div>

                    <!-- Document Upload -->
                    <div class="mb-3">
                        <label for="progressDocuments" class="form-label">Attach Documents (Optional)</label>
                        <input type="file" class="form-control" id="progressDocuments" name="documents" multiple
                            accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.gif">
                        <div class="form-text">Supported formats: PDF, DOC, DOCX, JPG, PNG, GIF (Max 10MB each)</div>
                    </div>

                    <!-- Document Preview -->
                    <div id="documentPreview" style="display: none;">
                        <h6>Selected Documents:</h6>
                        <div id="documentList" class="list-group"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitProgressReportBtn">
                        <i class="fa-solid fa-paper-plane me-1"></i>Submit Progress Report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

