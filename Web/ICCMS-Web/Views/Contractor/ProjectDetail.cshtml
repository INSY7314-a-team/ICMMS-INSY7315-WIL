                padding: 1rem;
            }

            .project-header-content {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .project-info-grid {
                grid-template-columns: 1fr;
            }

            .task-details {
                grid-template-columns: 1fr;
            }

            .tasks-header {
                flex-direction: column;
                align-items: stretch;
            }

            .task-filters {
                justify-content: center;
            }
