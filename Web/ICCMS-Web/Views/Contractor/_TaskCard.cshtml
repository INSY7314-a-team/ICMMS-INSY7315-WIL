@model ICCMS_Web.Models.ContractorTaskDto

@{
    // Calculate some derived values
    var isOverdue = Model.IsOverdue;
    var daysUntilDue = Model.DaysUntilDue;
    var statusBadgeClass = Model.StatusBadgeClass;
    var canSubmitProgress = Model.CanSubmitProgress;
    var canRequestCompletion = Model.CanRequestCompletion;
    
    // Clamp progress value to 0-100 range to prevent CSS injection and out-of-range values
    var progressValue = Math.Min(Math.Max(Convert.ToDouble(Model.Progress), 0), 100);
    
    // Calculate hours progress with floating-point division and proper handling of EstimatedHours == 0
    double hoursProgressPercent;
    if (Model.EstimatedHours > 0)
    {
        hoursProgressPercent = (Convert.ToDouble(Model.ActualHours) / Convert.ToDouble(Model.EstimatedHours)) * 100;
        hoursProgressPercent = Math.Max(0, Math.Min(100, hoursProgressPercent));
    }
    else
    {
        // If EstimatedHours == 0, set to 100% if ActualHours > 0, otherwise 0%
        hoursProgressPercent = Model.ActualHours > 0 ? 100 : 0;
    }
    var hoursProgress = Convert.ToInt32(hoursProgressPercent);
}

<div id="task-@Model.TaskId" class="task-card card h-100 construction-border-thin"
    data-task-id="@Model.TaskId" data-task-name="@Model.Name" data-task-status="@Model.Status"
    data-project-id="@Model.ProjectId" data-start-date="@Model.StartDate.ToString("o")"
    data-due-date="@Model.DueDate.ToString("o")" data-project-budget="@Model.ProjectBudget">
    
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
                <h6 class="card-title mb-1 fw-bold">
                    @Model.Name
                </h6>
                <p class="card-subtitle small mb-0">
                    @Model.ProjectName
                </p>
            </div>
            <div class="text-end d-flex align-items-center gap-2">
                <button type="button" class="btn btn-sm btn-outline-secondary" title="View details"
                    onclick="openTaskDetails('@Model.TaskId')">
                    <i class="fa-solid fa-chevron-down"></i>
                </button>
                <span class="status-badge @statusBadgeClass">@Model.Status</span>
            </div>
        </div>
    </div>

    <div class="card-body">
        <!-- Task Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text small mb-3">
                @(Model.Description.Length > 100 ? Model.Description.Substring(0, 100) + "..." : Model.Description)
            </p>
        }

        <!-- Task Stats -->
        <div class="row g-2 mb-3">
            <div class="col-12">
                <div class="stat-item mb-2">
                    <small>Start Date: <span>@Model.StartDate.ToString("MMM dd, yyyy")</span></small>
                </div>
            </div>
            <div class="col-12">
                <div class="stat-item mb-2">
                    <small>Due Date: <span class="@(isOverdue ? "text-danger fw-bold" : "")">@Model.DueDate.ToString("MMM dd, yyyy")</span></small>
                </div>
            </div>
            <div class="col-12">
                <div class="stat-item mb-2">
                    <small>Project Budget: <span>R @Model.ProjectBudget.ToString("N0")</span></small>
                </div>
            </div>
        </div>

        <!-- Progress Bar -->
        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
                <small class="progress-label">Task Progress:</small>
                <small class="progress-percentage">@progressValue%</small>
            </div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @progressValue%;" aria-valuenow="@progressValue"
                    aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>

        <!-- Time Tracking -->
        @if (Model.EstimatedHours > 0 || Model.ActualHours > 0)
        {
            <div class="time-tracking mb-3">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <small class="progress-label">Hours Worked</small>
                    <small class="progress-percentage">@Model.ActualHours / @Model.EstimatedHours</small>
                </div>
                <div class="progress">
                    <div class="progress-bar bg-info" role="progressbar" 
                         style="width: @hoursProgress%" 
                         aria-valuenow="@Math.Max(0, Math.Min(Model.ActualHours, Model.EstimatedHours > 0 ? Model.EstimatedHours : Model.ActualHours))" 
                         aria-valuemin="0" 
                         aria-valuemax="@(Model.EstimatedHours > 0 ? Model.EstimatedHours : Math.Max(1, Model.ActualHours))"></div>
                </div>
            </div>
        }
        
        <!-- Priority and Status Info -->
        <div class="task-meta mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <span class="priority-badge priority-@Model.Priority.ToLower()">
                    <i class="fa-solid fa-flag me-1"></i>@Model.Priority
                </span>
                @if (isOverdue)
                {
                    <span class="overdue-badge">
                        <i class="fa-solid fa-exclamation-triangle me-1"></i>Overdue
                    </span>
                }
                else if (daysUntilDue <= 3 && daysUntilDue > 0)
                {
                    <span class="due-soon-badge">
                        <i class="fa-solid fa-clock me-1"></i>Due in @daysUntilDue day(s)
                    </span>
                }
            </div>
        </div>

        <!-- Progress Reports Count -->
        @if (Model.ProgressReportCount > 0)
        {
            <div class="progress-reports-info">
                <small class="text-muted">
                    <i class="fa-solid fa-file-lines me-1"></i>@Model.ProgressReportCount progress report(s) submitted
                </small>
            </div>
        }

        <!-- Expandable task details (hidden by default) -->
        <div id="task-details-@Model.TaskId" class="mt-3" style="display:none;">
            <div class="accordion" id="task-acc-@Model.TaskId">
                <!-- Progress Reports Timeline -->
                <div class="card mb-2">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="fa-solid fa-file-lines me-2 text-warning"></i>Progress Reports</span>
                        <small class="text-muted">@Model.ProgressReportCount report(s)</small>
                    </div>
                    <div class="card-body">
                        <div id="progress-reports-@Model.TaskId">
                            <div class="text-center text-muted">
                                <i class="fa-solid fa-spinner fa-spin"></i> Loading progress reports...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="action-buttons">
            @if (canSubmitProgress)
            {
                <!-- Primary action for In Progress tasks -->
                <button type="button" class="btn-action btn-primary" onclick="openProgressReportModal('@Model.TaskId')"
                    title="Submit progress report">
                    <i class="fa-solid fa-file-lines me-1"></i>Submit Progress
                </button>
            }
            else if (Model.Status == "Awaiting Approval")
            {
                <!-- Status for tasks awaiting approval -->
                <button type="button" class="btn-action btn-info" disabled title="Awaiting PM approval">
                    <i class="fa-solid fa-hourglass-half me-1"></i>Awaiting Approval
                </button>
            }
            else if (Model.Status == "Completed")
            {
                <!-- Status for completed tasks -->
                <button type="button" class="btn-action btn-success" disabled title="Task completed">
                    <i class="fa-solid fa-check-circle me-1"></i>Completed
                </button>
            }
            else if (canRequestCompletion)
            {
                <!-- Primary action for tasks ready for completion -->
                <button type="button" class="btn-action btn-primary" onclick="openCompletionRequestModal('@Model.TaskId')"
                    title="Request task completion">
                    <i class="fa-solid fa-check me-1"></i>Request Completion
                </button>
            }
            else
            {
                <!-- Default action for pending tasks -->
                <button type="button" class="btn-action btn-secondary" disabled title="Task not started">
                    <i class="fa-solid fa-clock me-1"></i>Not Started
                </button>
            }

            <!-- Secondary actions dropdown -->
            <div class="dropdown">
                <button class="btn-action btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#" onclick="openTaskDetails('@Model.TaskId')">
                        <i class="fa-solid fa-eye me-2"></i>View Details
                    </a></li>
                    @if (canSubmitProgress)
                    {
                        <li><a class="dropdown-item" href="#" onclick="openProgressReportModal('@Model.TaskId')">
                            <i class="fa-solid fa-file-lines me-2"></i>Submit Progress
                        </a></li>
                    }
                    @if (canRequestCompletion)
                    {
                        <li><a class="dropdown-item" href="#" onclick="openCompletionRequestModal('@Model.TaskId')">
                            <i class="fa-solid fa-check me-2"></i>Request Completion
                        </a></li>
                    }
                    <li><a class="dropdown-item" href="#" onclick="viewTaskBudget('@Model.TaskId')">
                        <i class="fa-solid fa-dollar-sign me-2"></i>View Budget
                    </a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    // Task card action functions
    function openTaskDetails(taskId) {
        const el = document.getElementById(`task-details-${taskId}`);
        if (!el) return;
        
        const isShown = el.style.display !== 'none';
        el.style.display = isShown ? 'none' : 'block';
        
        // Toggle expanded class on the card container
        const card = document.getElementById(`task-${taskId}`);
        if (card) {
            if (isShown) {
                card.classList.remove('expanded');
            } else {
                card.classList.add('expanded');
                // Load progress reports if not already loaded
                loadProgressReports(taskId);
            }
        }
    }

    function loadProgressReports(taskId) {
        const container = document.getElementById(`progress-reports-${taskId}`);
        if (!container || container.dataset.loaded) return;

        fetch(`/Contractor/GetProgressReports?taskId=${encodeURIComponent(taskId)}`)
            .then(response => response.json())
            .then(reports => {
                if (reports && reports.length > 0) {
                    container.innerHTML = renderProgressReports(reports);
                } else {
                    container.innerHTML = '<div class="text-muted">No progress reports submitted yet</div>';
                }
                container.dataset.loaded = 'true';
            })
        return reports.map(report => {
            // Normalize and guard the incoming status value
            const statusText = typeof report.status === 'string' ? report.status : 'Pending';
            
            // Whitelist-supported status-to-class mappings; default to 'secondary' for unknown values
            const statusClass =
                statusText === 'Approved' ? 'success' :
                statusText === 'Rejected' ? 'danger' :
                statusText === 'Pending'  ? 'warning' : 'secondary';

            // Whitelist-supported status-to-icon mappings; default to 'fa-circle-info' for unknown values
            const statusIcon =
                statusText === 'Approved' ? 'fa-check-circle' :
                statusText === 'Rejected' ? 'fa-times-circle' :
                statusText === 'Pending'  ? 'fa-clock' : 'fa-circle-info';
            
            return `
                <div class="progress-report-item mb-3 p-3 border rounded">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h6 class="mb-1">${escapeHtml(report.description || 'No description')}</h6>
                            <small class="text-muted">
                                <i class="fa-solid fa-clock me-1"></i>
                                ${new Date(report.submittedAt).toLocaleDateString()}
                            </small>
                        </div>
                        <span class="badge bg-${statusClass}">
                            <i class="fa-solid ${statusIcon} me-1"></i>${escapeHtml(statusText)}
                `;
        });                                <i class="fa-solid fa-clock me-1"></i>
                                ${new Date(report.submittedAt).toLocaleDateString()}
                            </small>
                        </div>
                        <span class="badge bg-${statusClass}">
                            <i class="fa-solid ${statusIcon} me-1"></i>${report.status}
                        </span>
                    </div>
                    <div class="row g-2">
                        <div class="col-6">
                            <small class="text-muted">Hours Worked:</small>
                            <div class="fw-bold">${report.hoursWorked}</div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Documents:</small>
                            <div class="fw-bold">${report.attachedDocumentIds?.length || 0}</div>
                        </div>
                    </div>
                    ${report.reviewNotes ? `
                        <div class="mt-2 p-2 bg-light rounded">
                            <small class="text-muted">Review Notes:</small>
                            <div class="small">${escapeHtml(report.reviewNotes)}</div>
                        </div>
                    ` : ''}
                </div>
            `;
        }).join('');
    }

    function openProgressReportModal(taskId) {
        // Validate required DOM elements exist
        const modalElement = document.getElementById('progressReportModal');
        const taskIdInput = document.getElementById('progressReportTaskId');
        
        if (!modalElement) {
            console.warn('Progress report modal element not found');
            return;
        }
        
        if (!taskIdInput) {
            console.warn('Progress report task ID input element not found');
            return;
        }
        
        if (!taskId) {
            console.warn('Task ID is required for progress report modal');
            return;
        }
        
        const modal = new bootstrap.Modal(modalElement);
        modal.show();
        
        // Set task ID in the form
        taskIdInput.value = taskId;
        
        // Load task details for context
        loadTaskDetailsForModal(taskId);
    }

    function openCompletionRequestModal(taskId) {
        // Validate required DOM elements exist
        const modalElement = document.getElementById('completionRequestModal');
        const taskIdInput = document.getElementById('completionRequestTaskId');
        
        if (!modalElement) {
            console.warn('Completion request modal element not found');
            return;
        }
        
        if (!taskIdInput) {
            console.warn('Completion request task ID input element not found');
            return;
        }
        
        if (!taskId) {
            console.warn('Task ID is required for completion request modal');
            return;
        }
        
        const modal = new bootstrap.Modal(modalElement);
        modal.show();
        
        // Set task ID in the form
        taskIdInput.value = taskId;
        
        // Load task details for context
        loadTaskDetailsForModal(taskId);
    }

    function loadTaskDetailsForModal(taskId) {
        if (!taskId) {
            console.warn('Task ID is required for loading task details');
            return;
        }
        
        fetch(`/Contractor/GetTaskDetails?taskId=${encodeURIComponent(taskId)}`)
            .then(response => response.json())
            .then(task => {
                if (task) {
                    // Validate required DOM elements exist before updating
                    const taskNameElement = document.getElementById('modalTaskName');
                    const projectNameElement = document.getElementById('modalProjectName');
                    const taskDescriptionElement = document.getElementById('modalTaskDescription');
                    
                    if (taskNameElement) {
                        taskNameElement.textContent = task.name;
                    } else {
                        console.warn('Modal task name element not found');
                    }
                    
                    if (projectNameElement) {
                        projectNameElement.textContent = task.projectName;
                    } else {
                        console.warn('Modal project name element not found');
                    }
                    
                    if (taskDescriptionElement) {
                        taskDescriptionElement.textContent = task.description || 'No description provided';
                    } else {
                        console.warn('Modal task description element not found');
                    }
                }
            })
            .catch(error => {
                console.error('Failed to load task details:', error);
            });
    }

    function viewTaskBudget(taskId) {
        fetch(`/Contractor/GetTaskProjectBudget?taskId=${encodeURIComponent(taskId)}`)
            .then(response => response.json())
            .then(budget => {
                if (budget) {
                    showToast(`Project: ${budget.projectName}<br>Budget: R ${budget.budgetPlanned?.toLocaleString() || '0'}`, 'info');
                }
            })
            .catch(error => {
                console.error('Failed to load budget:', error);
                showToast('Failed to load budget information', 'error');
            });
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Toast functionality removed - using console logging instead
    function showToast(message, type = 'info') {
        console.log(`ðŸ“¢ ${type.toUpperCase()}: ${message}`);
    }
</script>
