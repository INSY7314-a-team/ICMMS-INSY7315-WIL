@model ICCMS_Web.Models.ContractorTaskDto

@{
    ViewData["Title"] = $"Task: {Model.Name}";
    Layout = "_Layout";
}

<div class="contractor-dashboard-container task-details-page">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "Contractor")" class="text-decoration-none">
                    <i class="fa-solid fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("ProjectDetail", "Contractor", new { projectId = Model.ProjectId })"
                    class="text-decoration-none">
                    <i class="fa-solid fa-folder-open"></i> @Model.ProjectName
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fa-solid fa-tasks"></i> @Model.Name
            </li>
        </ol>
    </nav>

    <!-- Task Header -->
    <div class="dashboard-header mb-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h1 class="dashboard-title mb-1">
                    <i class="fa-solid fa-tasks me-2" style="color: #F7EC59;"></i>@Model.Name
                </h1>
                <p class="dashboard-subtitle">@Model.Description</p>
            </div>
            <div class="task-status-section">
                <div class="status-badge status-@Model.Status.Replace(" ", "-").ToLower()">
                    @Model.Status
                </div>
                @if (Model.Status == "Awaiting Approval")
                {
                    <span class="awaiting-approval-chip ms-2"><i class="fa-solid fa-clock me-1"></i>AWAITING APPROVAL</span>
                }
            </div>
        </div>
        @if (Model.IsOverdue)
        {
            <div class="alert alert-warning mt-3 mb-0" role="alert">
                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                <strong>Overdue Task:</strong> This task is past its due date of @Model.DueDate.ToString("dd MMM yyyy").
            </div>
        }
    </div>

    <!-- Main Content Grid -->
    <div class="row g-4">
        <!-- Left Column: Task Information -->
        <div class="col-lg-8">
            <!-- Task Overview Section -->
            <div class="tasks-container-refactored mb-4">
                <div class="section-header-content">
                    <h3 class="section-title">
                        <i class="fa-solid fa-info-circle me-2"></i>Task Overview
                    </h3>
                </div>
                <div class="task-details-grid">
                    <div class="detail-row">
                        <span class="detail-label">Task ID</span>
                        <span class="detail-value">@Model.TaskId</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Priority</span>
                        <span class="priority-badge priority-@Model.Priority.ToLower()">@Model.Priority</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Assigned To</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(Model.AssignedTo) ? "Not Assigned" :
                            Model.AssignedTo)</ span >
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Start Date</span>
                        <span class="detail-value">@Model.StartDate.ToString("dd MMM yyyy")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Due Date</span>
                        <span class="detail-value">@Model.DueDate.ToString("dd MMM yyyy")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Created</span>
                        <span class="detail-value">@Model.StartDate.ToString("dd MMM yyyy")</span>
                    </div>
                </div>
            </div>

            <!-- Progress Section -->
            <div class="tasks-container-refactored mb-4">
                <div class="section-header-content">
                    <h3 class="section-title">
                        <i class="fa-solid fa-chart-line me-2"></i>Progress Tracking
                    </h3>
                </div>
                <div class="progress-container">
                    <div class="progress-row">
                        <span class="progress-label">Task Progress</span>
                        <span class="progress-percentage">@Model.Progress%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @(Model.Progress)%"></div>
                    </div>
                    <div class="progress-row">
                        <span class="progress-label">Hours Worked</span>
                        <span class="progress-percentage">@Model.ActualHours / @Model.EstimatedHours hours</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill bg-info"
                            style="width: @(Model.EstimatedHours > 0 ? (Model.ActualHours / Model.EstimatedHours * 100) : 0)%">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Completion Reports Section -->
            <div class="tasks-container-refactored mb-4">
                <div class="section-header-content">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="section-title">
                            <i class="fa-solid fa-check-circle me-2"></i>Completion Reports
                        </h3>
                        @if (Model.Status != "Pending" && Model.Status != "Completed")
                        {
                            <a href="@Url.Action("RequestCompletion", "Contractor", new { taskId = Model.TaskId })"
                                class="btn btn-sm btn-success">
                                <i class="fa-solid fa-plus me-1"></i>Request Completion
                            </a>
                        }
                    </div>
                </div>
                <div id="completionReportsContainer">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                        Loading completion reports...
                    </div>
                </div>
            </div>

            <!-- Progress Reports Section -->
            <div class="tasks-container-refactored mb-4">
                <div class="section-header-content">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="section-title">
                            <i class="fa-solid fa-chart-line me-2"></i>Progress Reports
                        </h3>
                        @if (Model.Status != "Pending" && Model.Status != "Completed")
                        {
                            <a href="@Url.Action("SubmitProgressReport", "Contractor", new { taskId = Model.TaskId })"
                                class="btn btn-sm btn-primary">
                                <i class="fa-solid fa-plus me-1"></i>Submit Progress
                            </a>
                        }
                    </div>
                </div>
                <div id="progressReportsContainer">
                    <div class="text-center py-3">
                        <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                        Loading progress reports...
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Actions and Project Info -->
        <div class="col-lg-4">
            <!-- Task Actions -->
            <div class="tasks-container-refactored mb-4">
                <div class="section-header-content">
                    <h3 class="section-title">
                        <i class="fa-solid fa-cogs me-2"></i>Task Actions
                    </h3>
                </div>
                <div class="d-grid gap-2">
                    @if (Model.Status == "Pending")
                    {
                        <button class="btn btn-primary start-task-btn" data-task-id="@Model.TaskId">
                            <i class="fa-solid fa-play me-1"></i>Start Task
                        </button>
                    }
                    @if (Model.Status != "Pending" && Model.Status != "Completed")
                    {
                        <a href="@Url.Action("SubmitProgressReport", "Contractor", new { taskId = Model.TaskId })"
                            class="btn btn-warning">
                            <i class="fa-solid fa-chart-line me-1"></i>Submit Progress
                        </a>
                        <a href="@Url.Action("RequestCompletion", "Contractor", new { taskId = Model.TaskId })"
                            class="btn btn-success">
                            <i class="fa-solid fa-check me-1"></i>Request Completion
                        </a>
                    }
                    <a href="@Url.Action("ProjectDetail", "Contractor", new { projectId = Model.ProjectId })"
                        class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i>Back to Project
                    </a>
                </div>
            </div>

            <!-- Information Accordion -->
            <div class="accordion" id="taskInfoAccordion">
                <!-- Project Information -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <i class="fa-solid fa-folder-open me-2"></i>Project Information
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                        data-bs-parent="#taskInfoAccordion">
                        <div class="accordion-body">
                            <div class="info-grid">
                                <div class="info-item"><span class="info-label">Project</span><span
                                        class="info-value">@Model.ProjectName</span></div>
                                <div class="info-item"><span class="info-label">Project ID</span><span
                                        class="info-value">@Model.ProjectId</span></div>
                                <div class="info-item"><span class="info-label">Client</span><span
                                        class="info-value">Not Available</span></div>
                                <div class="info-item"><span class="info-label">Project Manager</span><span
                                        class="info-value">Not Available</span></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Budget Information -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            <i class="fa-solid fa-dollar-sign me-2"></i>Budget Information
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#taskInfoAccordion">
                        <div class="accordion-body">
                            <div class="budget-grid">
                                <div class="budget-item"><span class="budget-label">Estimated Hours</span><span
                                        class="budget-value">@Model.EstimatedHours hours</span></div>
                                <div class="budget-item"><span class="budget-label">Hours Worked</span><span
                                        class="budget-value">@Model.ActualHours hours</span></div>
                                <div class="budget-item"><span class="budget-label">Remaining</span><span
                                        class="budget-value">@(Model.EstimatedHours - Model.ActualHours) hours</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include dashboard CSS -->
<link rel="stylesheet" href="~/css/contractor-dashboard.css" />
<link rel="stylesheet" href="~/css/contractor-task-cards.css" />
<link rel="stylesheet" href="~/css/contractor-task-details.css" />

<!-- Include JavaScript -->
<script src="~/js/contractor-project-detail.js"></script>
<script src="~/js/contractor-universal-modal.js"></script>

<script>
    // Load progress and completion reports when page loads
    document.addEventListener('DOMContentLoaded', function () {
        const taskId = '@Model.TaskId';
        loadProgressReports(taskId);
        loadCompletionReports(taskId);
    });

    // Handle start task button
    document.addEventListener('click', function (e) {
        if (e.target.closest('.start-task-btn')) {
            const button = e.target.closest('.start-task-btn');
            const taskId = button.getAttribute('data-task-id');
            if (taskId) {
                startTask(taskId);
            }
        }
    });

    // Start task function
    async function startTask(taskId) {
        try {
            const response = await fetch('/Contractor/UpdateTaskStatus', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    taskId: taskId,
                    status: 'In Progress'
                })
            });

            if (response.ok) {
                location.reload(); // Refresh the page to show updated status
            } else {
                const error = await response.json();
                alert('Error starting task: ' + (error.error || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error starting task:', error);
            alert('Error starting task: ' + error.message);
        }
    }
</script>
