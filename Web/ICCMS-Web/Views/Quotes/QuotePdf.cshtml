@model ICCMS_Web.Models.QuotationDto
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quotation - @Model.ProjectId</title>
    <style>
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 40px;
            background: #fff;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 4px solid #FFD54F;
            padding-bottom: 10px;
            margin-bottom: 25px;
        }

        .header-left {
            display: flex;
            flex-direction: column;
            gap: 3px;
        }

        .header-left img {
            height: 60px;
            margin-bottom: 5px;
        }

        .company-name {
            font-size: 18px;
            font-weight: bold;
            color: #222;
        }

        .contact-info {
            font-size: 11px;
            color: #666;
        }

        .summary-box {
            text-align: right;
            background: #FFD54F;
            color: #000;
            padding: 10px 15px;
            border-radius: 4px;
            font-weight: bold;
            width: 220px;
        }

        .recipient {
            margin-bottom: 25px;
        }

        .recipient strong {
            color: #000;
        }

        h3.section-title {
            color: #FFD54F;
            border-bottom: 2px solid #FFD54F;
            padding-bottom: 5px;
            margin-bottom: 10px;
            font-size: 14px;
            text-transform: uppercase;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 5px;
            font-size: 12px;
        }

        th {
            background: #FFD54F;
            color: #000;
            padding: 8px;
            text-align: left;
        }

        td {
            border-bottom: 1px solid #eee;
            padding: 8px;
        }

        tr:nth-child(even) td {
            background: #fafafa;
        }

        .totals {
            text-align: right;
            margin-top: 20px;
            font-size: 13px;
        }

        .totals p {
            margin: 3px 0;
        }

        .grand-total {
            font-size: 15px;
            font-weight: bold;
            color: #000;
        }

        .footer {
            border-top: 1px solid #ddd;
            margin-top: 30px;
            padding-top: 10px;
            font-size: 10px;
            text-align: center;
            color: #555;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <div class="header-left">
            <img src="~/images/TaskIt2.png" alt="TaskIt Logo" />
            <div class="company-name">TASKIT</div>
            <div class="contact-info">
                Integrated Construction & Maintenance Management System (ICMMS)<br />
                support@taskit.co.za | +27 87 123 4567
            </div>
        </div>

        <div class="summary-box">
            <div>Quotation #@Model.QuotationId</div>
            <div>Issued: @Model.CreatedAt.ToString("dd MMM yyyy")</div>
            <div>Total: R @Model.GrandTotal.ToString("N2")</div>
        </div>
    </div>

    <!-- RECIPIENT -->
    <div class="recipient">
        <strong>RECIPIENT:</strong><br />
        Client ID: @Model.ClientId<br />
        Project ID: @Model.ProjectId<br />
        Valid Until: @Model.ValidUntil.ToString("dd MMM yyyy")
    </div>

    <!-- SERVICES -->
    <h3 class="section-title">For Services Rendered</h3>
    <table>
        <thead>
            <tr>
                <th style="width:35%">Product / Service</th>
                <th style="width:35%">Description</th>
                <th style="width:10%">Qty</th>
                <th style="width:10%">Unit Price (R)</th>
                <th style="width:10%">Total (R)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                foreach (var i in Model.Items)
                {
                    <tr>
                        <td>@i.Name</td>
                        <td>@i.Description</td>
                        <td>@i.Quantity</td>
                        <td>@i.UnitPrice.ToString("N2")</td>
                        <td>@i.LineTotal.ToString("N2")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" style="text-align:center;">No items available</td></tr>
            }
        </tbody>
    </table>

    <!-- TOTALS -->
    <div class="totals">
        <p><strong>Subtotal:</strong> R @Model.Subtotal.ToString("N2")</p>
        <p><strong>Tax (15%):</strong> R @Model.TaxTotal.ToString("N2")</p>
        <p class="grand-total"><strong>Total:</strong> R @Model.GrandTotal.ToString("N2")</p>
    </div>

    <!-- FOOTER -->
    <div class="footer">
        <p><strong>Banking Details:</strong> FNB | Acc: 0000000000 | Ref: @Model.ProjectId</p>
        <p>Thank you for choosing TaskIt â€” powered by ICCMS</p>
    </div>
</body>
</html>
