@model ICCMS_Web.Models.QuotationDto
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <style>
    body { font-family: Arial; font-size: 12px; }
    .header { text-align:center; margin-bottom:20px; }
    table { width:100%; border-collapse:collapse; }
    th, td { border:1px solid #ccc; padding:6px; text-align:left; }
    th { background:#f2f2f2; }
  </style>
</head>
<body>
  <div class="header">
    <img src="https://yourcompanylogo.com/logo.png" height="50"/><br/>
    <h2>Quotation</h2>
  </div>

  <p><strong>Client:</strong> @Model.ClientId</p>
  <p><strong>Project:</strong> @Model.ProjectId</p>
  <p><strong>Date:</strong> @Model.CreatedAt</p>

  <table>
    <thead><tr><th>Item</th><th>Qty</th><th>Price</th><th>Total</th></tr></thead>
    <tbody>
      @foreach(var i in Model.Items)
      {
        <tr>
          <td>@i.Name</td>
          <td>@i.Quantity</td>
          <td>R @i.UnitPrice</td>
          <td>R @i.LineTotal</td>
        </tr>
      }
    </tbody>
  </table>

  <p><strong>Subtotal:</strong> R @Model.Subtotal</p>
  <p><strong>Tax:</strong> R @Model.TaxTotal</p>
  <p><strong>Total:</strong> <b>R @Model.GrandTotal</b></p>
</body>
</html>
