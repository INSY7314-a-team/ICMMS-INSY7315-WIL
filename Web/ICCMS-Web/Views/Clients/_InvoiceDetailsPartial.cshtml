@model ICCMS_Web.Models.InvoiceDto
@{
    var daysUntilDue = (Model.DueDate - DateTime.Now).Days;
    var isOverdue = daysUntilDue < 0;
    var statusClass = Model.Status?.ToLower() switch
    {
        "draft" => "secondary",
        "issued" => "info",
        "paid" => "success",
        "overdue" => "danger",
        _ => "warning"
    };
}

<!-- ðŸ§¾ INVOICE DETAILS - DARK THEME -->
<div class="card border-0 shadow-lg rounded-4"
     style="background: var(--secondary-bg); color: var(--text-light);">
    <div class="card-body p-4">

        <!-- ðŸŒŸ SUMMARY BAR -->
        <div class="d-flex flex-wrap justify-content-between align-items-center p-3 mb-4 rounded-3"
             style="background: rgba(255,255,255,0.05); border-left: 4px solid var(--accent-yellow);">
            <div>
                <small class="text-muted d-block">Invoice Number</small>
                <span class="fw-bold">@Model.InvoiceNumber</span>
            </div>
            <div>
                <small class="text-muted d-block">Status</small>
                <span class="badge bg-@statusClass">@Model.Status</span>
            </div>
            <div>
                <small class="text-muted d-block">Total Amount</small>
                <span class="fw-bold text-success">R @Model.TotalAmount.ToString("N2")</span>
            </div>
            <div>
                <small class="text-muted d-block">Due Date</small>
                <span class="fw-bold text-warning">@Model.DueDate.ToString("MMM dd, yyyy")</span>
            </div>
        </div>

        <div class="card shadow-sm mb-4 border-0"
             style="background: var(--secondary-bg); color: var(--text-light);">
            <div class="card-header bg-transparent border-0 py-2">
                <h6 class="fw-bold mb-0 text-gradient">
                  Financial Overview
                </h6>
            </div>
            <div class="card-body" style="background: rgba(255,255,255,0.05); border-left: 4px solid var(--accent-yellow);">
                <div class="d-flex flex-wrap gap-4 justify-content-around">
                    <div class="text-center">
                        <h5 class="fw-bold text-success mb-1">R @Model.Subtotal.ToString("N2")</h5>
                        <p class="small text-muted mb-0">Subtotal</p>
                    </div>
                    <div class="text-center">
                        <h5 class="fw-bold text-warning mb-1">R @Model.TaxTotal.ToString("N2")</h5>
                        <p class="small text-muted mb-0">Tax Total</p>
                    </div>
                    <div class="text-center">
                        <h5 class="fw-bold text-light mb-1">R @Model.TotalAmount.ToString("N2")</h5>
                        <p class="small text-muted mb-0">Total Amount</p>
                    </div>
                    @if (isOverdue)
                    {
                        <div class="alert alert-danger mt-3 w-100 text-center">
                            <i class="fa-solid fa-clock me-2"></i>This invoice is overdue.
                        </div>
                    }
                    else if (daysUntilDue <= 5)
                    {
                        <div class="alert alert-warning mt-3 w-100 text-center">
                            <i class="fa-solid fa-hourglass-half me-2"></i>Due soon: @daysUntilDue days left
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- ðŸ§­ TIMELINE -->
        <div class="card shadow-sm mb-4 border-0"
             style="background: var(--secondary-bg); color: var(--text-light);">
            <div class="card-header bg-transparent border-0 py-2">
                <h6 class="fw-bold mb-0 text-gradient">
                    <i class="fa-solid fa-clock-rotate-left me-2 text-info"></i>Timeline
                </h6>
            </div>
            <div class="card-body" style="background: rgba(255,255,255,0.05); border-left: 4px solid var(--accent-yellow);">
                <ul class="list-unstyled mb-0">
                    <li><i class="fa-solid fa-circle text-primary me-2"></i>Issued â€” @Model.IssuedDate.ToString("MMM dd, yyyy")</li>
                    <li><i class="fa-solid fa-circle text-warning me-2"></i>Due â€” @Model.DueDate.ToString("MMM dd, yyyy")</li>
                    @if (Model.PaidDate.HasValue)
                    {
                        <li><i class="fa-solid fa-circle text-success me-2"></i>Paid â€” @Model.PaidDate.Value.ToString("MMM dd, yyyy")</li>
                    }
                </ul>
            </div>
        </div>

        <!-- ðŸ“‹ LINE ITEMS -->
        <div class="card shadow-sm mb-4 border-0"
             style="background: var(--secondary-bg); color: var(--text-light);">
            <div class="card-header bg-transparent border-0 py-2">
                <h6 class="fw-bold mb-0 text-gradient">
                    <i class="fa-solid fa-list me-2 text-warning"></i>Line Items
                </h6>
            </div>
            <div class="card-body p-0">
                @if (Model.Items != null && Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0">
                            <thead style="background: var(--primary-bg); color: var(--accent-yellow);">
                                <tr>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Tax %</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>R @item.UnitPrice.ToString("N2")</td>
                                        <td>@item.TaxRate.ToString("N2")%</td>
                                        <td class="fw-bold text-success">R @item.LineTotal.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No line items found.</p>
                    </div>
                }
            </div>
        </div>

        <!-- ðŸ’° FINANCIAL OVERVIEW -->
        

        <!-- âš™ï¸ ACTIONS -->
        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
                <i class="fa-solid fa-arrow-left me-2"></i>Back
            </button>
            <button class="btn btn-outline-warning" onclick="downloadInvoice('@Model.InvoiceId')">
                <i class="fa-solid fa-download me-2"></i>Download Invoice
            </button>
        </div>
    </div>
</div>



