@model ICCMS_Web.Controllers.ClientDashboardViewModel

@{
    ViewData["Title"] = "Client Dashboard";
}

<!-- Modern Dashboard Header -->
<div class="dashboard-header bg-gradient-primary text-white py-4 mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h3 mb-0">
                    <i class="fas fa-user-tie me-3"></i>Client Dashboard
                </h1>
                <p class="mb-0 opacity-75">Welcome back, @User.Identity?.Name! Manage your projects and quotations</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex align-items-center justify-content-end">
                    <div class="me-3">
                        <small class="text-white-50">Last Login</small><br>
                        <span class="fw-bold">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="avatar-circle bg-white text-primary">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div>
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                <div>
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Dashboard Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-primary text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Total Projects</h6>
                            <h2 class="mb-0">@(Model.Projects?.Count ?? 0)</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-project-diagram fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-success text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Active Projects</h6>
                            <h2 class="mb-0">@(Model.Projects?.Count(p => p.Status?.ToLower() == "active") ?? 0)</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-play-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-warning text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Pending Quotations</h6>
                            <h2 class="mb-0">@(Model.Quotations?.Count(q => q.Status?.ToLower() == "pending") ?? 0)</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-clock fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-info text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Total Budget</h6>
                            <h2 class="mb-0">R @(Model.Projects?.Sum(p => p.BudgetPlanned).ToString("N0") ?? "0")</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-money-bill-wave fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-warning text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Maintenance Requests</h6>
                            <h2 class="mb-0">@(Model.MaintenanceRequests?.Count ?? 0)</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-tools fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-project-diagram me-2 text-primary"></i>My Projects
                        </h5>
                        <span class="badge bg-primary">@(Model.Projects?.Count ?? 0) Projects</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Projects?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Project Name</th>
                                        <th>Status</th>
                                        <th>Budget</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model.Projects)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="project-icon me-3">
                                                        <i class="fas fa-building text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@project.Name</h6>
                                                        <small class="text-muted">@project.Description</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = project.Status?.ToLower() switch
                                                    {
                                                        "active" => "success",
                                                        "completed" => "primary",
                                                        "on hold" => "warning",
                                                        "cancelled" => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@project.Status</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>R @project.BudgetPlanned.ToString("N0")</strong>
                                                    @if (project.BudgetActual > 0)
                                                    {
                                                        <br><small class="text-muted">Actual: R @project.BudgetActual.ToString("N0")</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>@project.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@project.EndDatePlanned.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("ProjectDetails", "Clients", new { id = project.ProjectId })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Projects Found</h5>
                            <p class="text-muted">You don't have any projects assigned yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quotations Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice-dollar me-2 text-success"></i>Quotations
                        </h5>
                        <span class="badge bg-success">@(Model.Quotations?.Count ?? 0) Quotations</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Quotations?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Valid Until</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var quotation in Model.Quotations)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="quotation-icon me-3">
                                                        <i class="fas fa-file-invoice text-success"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@quotation.Description</h6>
                                                        <small class="text-muted">ID: @quotation.QuotationId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <strong>R @quotation.Total.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                @{
                                                    var quoteStatusClass = quotation.Status?.ToLower() switch
                                                    {
                                                        "pending" => "warning",
                                                        "approved" => "success",
                                                        "rejected" => "danger",
                                                        "expired" => "secondary",
                                                        _ => "info"
                                                    };
                                                }
                                                <span class="badge bg-@quoteStatusClass">@quotation.Status</span>
                                            </td>
                                            <td>@quotation.ValidUntil.ToString("MMM dd, yyyy")</td>
                                            <td>@quotation.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("QuotationDetails", "Clients", new { id = quotation.QuotationId })" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    @if (quotation.Status?.ToLower() == "pending")
                                                    {
                                                        <form method="post" action="@Url.Action("ApproveQuotation", "Clients")" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="quotationId" value="@quotation.QuotationId" />
                                                            <button type="submit" class="btn btn-sm btn-success" 
                                                                    onclick="return confirm('Are you sure you want to approve this quotation?')">
                                                                <i class="fas fa-check me-1"></i>Approve
                                                            </button>
                                                        </form>
                                                        <form method="post" action="@Url.Action("RejectQuotation", "Clients")" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="quotationId" value="@quotation.QuotationId" />
                                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                                    onclick="return confirm('Are you sure you want to reject this quotation?')">
                                                                <i class="fas fa-times me-1"></i>Reject
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-invoice-dollar fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Quotations Found</h5>
                            <p class="text-muted">You don't have any quotations yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Maintenance Requests Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-tools me-2 text-warning"></i>Maintenance Requests
                        </h5>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-warning me-3">@(Model.MaintenanceRequests?.Count ?? 0) Requests</span>
                            <a href="@Url.Action("CreateMaintenanceRequest", "Clients")" class="btn btn-warning btn-sm">
                                <i class="fas fa-plus me-1"></i>New Request
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.MaintenanceRequests?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th>Project</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.MaintenanceRequests)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="maintenance-icon me-3">
                                                        <i class="fas fa-tools text-warning"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@request.Description</h6>
                                                        <small class="text-muted">ID: @request.MaintenanceRequestId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-muted">@request.ProjectId</span>
                                            </td>
                                            <td>
                                                @{
                                                    var priorityClass = request.Priority?.ToLower() switch
                                                    {
                                                        "low" => "success",
                                                        "medium" => "info",
                                                        "high" => "warning",
                                                        "critical" => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@priorityClass">@request.Priority</span>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = request.Status?.ToLower() switch
                                                    {
                                                        "pending" => "warning",
                                                        "in progress" => "info",
                                                        "completed" => "success",
                                                        "cancelled" => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@request.Status</span>
                                            </td>
                                            <td>@request.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tools fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Maintenance Requests Found</h5>
                            <p class="text-muted">You don't have any maintenance requests yet.</p>
                            <a href="@Url.Action("CreateMaintenanceRequest", "Clients")" class="btn btn-warning">
                                <i class="fas fa-plus me-2"></i>Create Your First Request
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .stat-card {
        transition: transform 0.2s;
    }
    
    .stat-card:hover {
        transform: translateY(-2px);
    }
    
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .project-icon, .quotation-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(13, 110, 253, 0.1);
    }
    
    .quotation-icon {
        background-color: rgba(25, 135, 84, 0.1);
    }
    
    .maintenance-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(255, 193, 7, 0.1);
    }
</style>
