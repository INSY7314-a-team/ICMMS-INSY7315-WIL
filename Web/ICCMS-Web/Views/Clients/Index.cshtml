@model ICCMS_Web.Controllers.ClientDashboardViewModel

@{
    ViewData["Title"] = "Client Dashboard";
}

<!-- Modern Dashboard Header -->
<div class="dashboard-header bg-gradient-primary text-white py-4 mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="h3 mb-0">
                    <i class="fas fa-user-tie me-3"></i>Client Dashboard
                </h1>
                <p class="mb-0 opacity-75">Welcome back, @User.Identity?.Name! Manage your projects and quotations</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex align-items-center justify-content-end">
                    <div class="me-3">
                        <small class="text-white-50">Last Login</small><br>
                        <span class="fw-bold">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="avatar-circle bg-white text-primary">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div>
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                <div>
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Dashboard Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-primary text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Total Projects</h6>
                            <h2 class="mb-0">@(Model.Projects?.Count ?? 0)</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-project-diagram fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @{
            // ‚úÖ Define which statuses count as active/sent for flexibility
            var activeProjectStatuses = new[] { "Active" };
            var sentQuoteStatuses = new[] { "SentToClient" };
        }

        <!-- ===== Active Projects Card ===== -->
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-success text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Active Projects</h6>
                            <h2 class="mb-0">
                                @(Model.Projects?.Count(p =>
                                    p.Status != null &&
                                    activeProjectStatuses.Contains(p.Status.Trim(), StringComparer.OrdinalIgnoreCase)
                                ) ?? 0)
                            </h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-play-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ===== Quotations Sent to Client Card ===== -->
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-warning text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Quotations Pending</h6>
                            <h2 class="mb-0">
                                @(Model.Quotations?.Count(q =>
                                    q.Status != null &&
                                    sentQuoteStatuses.Contains(q.Status.Trim(), StringComparer.OrdinalIgnoreCase)
                                ) ?? 0)
                            </h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-envelope fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card stat-card bg-info text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-white-50 mb-1">Total Budget</h6>
                            <h2 class="mb-0">R @(Model.Projects?.Sum(p => p.BudgetPlanned).ToString("N0") ?? "0")</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-money-bill-wave fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Maintenance Requests Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-tools me-2 text-danger"></i>Maintenance Requests
                        </h5>
                        <button class="btn btn-sm btn-outline-danger" onclick="showMaintenanceForm()">+ New Request</button>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Create Form (hidden by default) -->
                    <div id="maintenanceForm" class="mb-4" style="display:none;">
                        <form id="createMaintenanceForm" onsubmit="return submitMaintenanceRequest(event)">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Select Completed Project</label>
                                <select id="projectSelect" class="form-select" required>
                                    <option value="">-- Select --</option>
                                    @foreach (var p in Model.Projects.Where(p => p.Status?.ToLower() == "completed"))
                                    {
                                        <option value="@p.ProjectId">@p.Name (@p.ProjectId)</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Priority</label>
                                <select id="prioritySelect" class="form-select" required>
                                    <option>Low</option>
                                    <option selected>Medium</option>
                                    <option>High</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Description</label>
                                <textarea id="descriptionInput" class="form-control" rows="3" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Attach Photo (optional)</label>
                                <input type="file" id="mediaFile" class="form-control" accept="image/*">
                            </div>


                            <button type="submit" class="btn btn-danger">Submit Request</button>
                            <button type="button" class="btn btn-secondary" onclick="hideMaintenanceForm()">Cancel</button>
                        </form>
                    </div>

                <!-- Existing Requests Table -->
                <div id="maintenanceRequestsContainer">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Status</th>
                                <th>Project</th>
                                <th>Description</th>
                                <th>Photo</th>
                                <th>Priority</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="maintenanceRequestsTable">
                        @foreach (var req in Model.MaintenanceRequests ?? new List<MaintenanceRequestDto>())
                        {
                            var projectName = Model.Projects.FirstOrDefault(p => p.ProjectId == req.ProjectId)?.Name ?? "Unknown Project";
                            var statusClass = req.Status?.ToLower() switch
                            {
                                "pending" => "warning",
                                "in progress" => "info",
                                "resolved" => "success",
                                "cancelled" => "danger",
                                _ => "secondary"
                            };

                            <tr>
                                <td><span class="badge bg-@statusClass">@req.Status</span></td>
                                <td>@projectName</td>
                                <td>@req.Description</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(req.MediaUrl))
                                    {
                                        <img src="@req.MediaUrl" 
                                            alt="Attached Image" 
                                            class="img-thumbnail" 
                                            style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;"
                                            onclick="showImageModal('@req.MediaUrl')" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-image text-muted"></i>
                                    }
                                </td>
                                <td><span class="fw-bold">@req.Priority</span></td>
                                <td>@req.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <a href="@Url.Action("MaintenanceRequestDetails", "Clients", new { id = req.MaintenanceRequestId })"
                                    class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <!-- Image Preview Modal -->
                    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="imageModalLabel">Attached Image</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center">
                                    <img id="modalImage" src="" alt="Full View" class="img-fluid rounded shadow-sm" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        function showMaintenanceForm() {
            console.log("üß© Showing maintenance form");
            document.getElementById("maintenanceForm").style.display = "block";
        }

        function hideMaintenanceForm() {
            console.log("üö´ Hiding maintenance form");
            document.getElementById("maintenanceForm").style.display = "none";
        }

        async function submitMaintenanceRequest(event) {
            event.preventDefault();

            const projectId = document.getElementById("projectSelect").value;
            const priority = document.getElementById("prioritySelect").value;
            const description = document.getElementById("descriptionInput").value;
            const file = document.getElementById("mediaFile").files[0];

            console.log("üß± Submitting Maintenance Request:", { projectId, priority, description, file });

            let mediaUrl = "";

            try {
                // üß© 1Ô∏è‚É£ Upload file if provided
                if (file) {
                    console.log("üì§ Uploading file:", file.name);
                    const formData = new FormData();
                    formData.append("file", file);

                    const uploadRes = await fetch("/Upload/Media", { // ‚¨ÖÔ∏è you‚Äôll add this controller
                        method: "POST",
                        body: formData
                    });

                    if (uploadRes.ok) {
                        const data = await uploadRes.json();
                        mediaUrl = data.url;

                        console.log("‚úÖ File uploaded:", mediaUrl);
                    } else {
                        console.warn("‚ö†Ô∏è File upload failed, continuing without image");
                    }
                }

                // üß± 2Ô∏è‚É£ Build payload
                const payload = { projectId, priority, description, mediaUrl };

                // üåê 3Ô∏è‚É£ Send to backend
                const res = await fetch("/Clients/CreateMaintenanceRequest", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(payload)
                });

                if (res.ok) {
                    alert("‚úÖ Maintenance request created successfully!");
                    location.reload();
                } else {
                    alert("‚ùå Failed to create maintenance request.");
                }

            } catch (err) {
                console.error("üî• [submitMaintenanceRequest] Error:", err);
                alert("Unexpected error: " + err.message);
            }
        }


    </script>


    <!-- Projects Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-project-diagram me-2 text-primary"></i>My Projects
                        </h5>
                        <span class="badge bg-primary">@(Model.Projects?.Count ?? 0) Projects</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Projects?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Project Name</th>
                                        <th>Status</th>
                                        <th>Budget</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model.Projects)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="project-icon me-3">
                                                        <i class="fas fa-building text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@project.Name</h6>
                                                        <small class="text-muted">@project.Description</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = project.Status?.ToLower() switch
                                                    {
                                                        "active" => "success",
                                                        "completed" => "primary",
                                                        "on hold" => "warning",
                                                        "cancelled" => "danger",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@project.Status</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>R @project.BudgetPlanned.ToString("N0")</strong>
                                                    @if (project.BudgetActual > 0)
                                                    {
                                                        <br><small class="text-muted">Actual: R @project.BudgetActual.ToString("N0")</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>@project.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@project.EndDatePlanned.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("ProjectDetails", "Clients", new { id = project.ProjectId })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Projects Found</h5>
                            <p class="text-muted">You don't have any projects assigned yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quotations Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice-dollar me-2 text-success"></i>Quotations
                        </h5>
                        <span class="badge bg-success">@(Model.Quotations?.Count ?? 0) Quotations</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Quotations?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Valid Until</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var quotation in Model.Quotations)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="quotation-icon me-3">
                                                        <i class="fas fa-file-invoice text-success"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@quotation.Description</h6>
                                                        <small class="text-muted">ID: @quotation.QuotationId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <strong>R @quotation.GrandTotal.ToString("N2")</strong>

                                            </td>
                                            <td>
                                                @{
                                                    var quoteStatusClass = quotation.Status?.ToLower() switch
                                                    {
                                                        "pending" => "warning",
                                                        "approved" => "success",
                                                        "rejected" => "danger",
                                                        "expired" => "secondary",
                                                        _ => "info"
                                                    };
                                                }
                                                <span class="badge bg-@quoteStatusClass">@quotation.Status</span>
                                            </td>
                                            <td>@quotation.ValidUntil.ToString("MMM dd, yyyy")</td>
                                            <td>@quotation.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("QuotationDetails", "Clients", new { id = quotation.QuotationId })" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    @if (quotation.Status?.ToLower() == "pending")
                                                    {
                                                        <form method="post" action="@Url.Action("ApproveQuotation", "Clients")" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="quotationId" value="@quotation.QuotationId" />
                                                            <button type="submit" class="btn btn-sm btn-success" 
                                                                    onclick="return confirm('Are you sure you want to approve this quotation?')">
                                                                <i class="fas fa-check me-1"></i>Approve
                                                            </button>
                                                        </form>
                                                        <form method="post" action="@Url.Action("RejectQuotation", "Clients")" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="quotationId" value="@quotation.QuotationId" />
                                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                                    onclick="return confirm('Are you sure you want to reject this quotation?')">
                                                                <i class="fas fa-times me-1"></i>Reject
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-invoice-dollar fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Quotations Found</h5>
                            <p class="text-muted">You don't have any quotations yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

