@model ICCMS_Web.Models.MaintenanceRequestDto

<div class="project-card construction-border-thin">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="card-title mb-1">Maintenance Request #@Model.MaintenanceRequestId</h5>
            <p class="card-subtitle text-muted mb-0">
                Project: @(ViewBag.ProjectName ?? "Unknown Project")
            </p>
        </div>
        <span class="badge bg-@(Model.Status?.ToLower() switch
        {
            "pending" => "warning",
            "in progress" => "info",
            "resolved" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        })">@Model.Status</span>
    </div>

    <div class="card-body">
        <div class="mb-3">
            <p class="card-text">@Model.Description</p>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
        {
            <div class="mb-3 text-center">
                <img src="@Model.MediaUrl"
                     alt="Attached Image"
                     class="img-fluid rounded shadow-sm"
                     style="max-height:200px;cursor:pointer;"
                     onclick="showImageModal('@Model.MediaUrl')" />
            </div>
        }

        <div class="stat-item mb-2">
            <small>Priority:</small>
            <span class="fw-bold text-@(Model.Priority?.ToLower() switch
            {
                "high" => "danger",
                "medium" => "warning",
                "low" => "success",
                _ => "secondary"
            })">@Model.Priority</span>
        </div>

        <div class="stat-item mb-2">
            <small>Created:</small>
            <span>@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
        </div>
    </div>

    <div class="card-footer d-flex justify-content-between align-items-center">
            <button class="btn btn-action btn-primary"
                    onclick="openMaintenanceDetails('@Model.MaintenanceRequestId')">
                <i class="fa-solid fa-eye me-1"></i> View Details
            </button>
        <span class="text-muted small">Priority: @Model.Priority</span>
    </div>
</div>
