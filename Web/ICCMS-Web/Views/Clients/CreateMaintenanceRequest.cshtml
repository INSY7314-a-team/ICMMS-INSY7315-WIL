@model ICCMS_Web.Models.CreateMaintenanceRequestViewModel

@{
    ViewData["Title"] = "Create Maintenance Request";
}

<!-- Maintenance Request Header -->
<div class="maintenance-header bg-gradient-warning text-white py-4 mb-4">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-dark mb-0">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Clients")" class="text-white-50">
                                <i class="fas fa-arrow-left me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Create Maintenance Request</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-0 mt-2">
                    <i class="fas fa-tools me-3"></i>Create Maintenance Request
                </h1>
                <p class="mb-0 opacity-75">Submit a new maintenance request for your project</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex align-items-center justify-content-end">
                    <div class="me-3">
                        <small class="text-white-50">Request Date</small><br>
                        <span class="fw-bold">@DateTime.Now.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="avatar-circle bg-white text-warning">
                        <i class="fas fa-tools"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div>
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                <div>
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-clipboard-list me-2 text-warning"></i>Maintenance Request Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateMaintenanceRequest" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Project Selection -->
                        <div class="mb-4">
                            <label asp-for="ProjectId" class="form-label fw-bold">
                                <i class="fas fa-building me-2 text-primary"></i>@Html.DisplayNameFor(m => m.ProjectId)
                            </label>
                            <select asp-for="ProjectId" class="form-select form-select-lg" asp-items="@(new SelectList(ViewBag.Projects ?? new List<Project>(), "ProjectId", "Name"))">
                                <option value="">-- Select a Project --</option>
                            </select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Choose the project that requires maintenance
                            </div>
                        </div>

                        <!-- Priority Selection -->
                        <div class="mb-4">
                            <label asp-for="Priority" class="form-label fw-bold">
                                <i class="fas fa-exclamation-triangle me-2 text-danger"></i>@Html.DisplayNameFor(m => m.Priority)
                            </label>
                            <select asp-for="Priority" class="form-select form-select-lg">
                                <option value="">-- Select Priority --</option>
                                <option value="Low">Low - Minor issues, non-urgent</option>
                                <option value="Medium">Medium - Standard maintenance needed</option>
                                <option value="High">High - Important, needs attention soon</option>
                                <option value="Critical">Critical - Urgent, affects operations</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Select the urgency level of your maintenance request
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-2 text-info"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="6" 
                                      placeholder="Please provide a detailed description of the maintenance issue..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Be as detailed as possible to help us understand the issue
                            </div>
                        </div>

                        <!-- Media URL -->
                        <div class="mb-4">
                            <label asp-for="MediaUrl" class="form-label fw-bold">
                                <i class="fas fa-link me-2 text-success"></i>@Html.DisplayNameFor(m => m.MediaUrl)
                            </label>
                            <input asp-for="MediaUrl" class="form-control form-control-lg" 
                                   placeholder="https://example.com/image.jpg (optional)" />
                            <span asp-validation-for="MediaUrl" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Optional: Add a link to photos or documents related to the issue
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Clients")" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Information Card -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-info"></i>What happens next?
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class="step-icon bg-primary text-white me-3">
                                    <i class="fas fa-1"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Request Submitted</h6>
                                    <p class="text-muted small mb-0">Your request will be reviewed by our team</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start mb-3">
                                <div class="step-icon bg-info text-white me-3">
                                    <i class="fas fa-2"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Assessment</h6>
                                    <p class="text-muted small mb-0">We'll assess the issue and create a quotation</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class="step-icon bg-success text-white me-3">
                                    <i class="fas fa-3"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Quotation Sent</h6>
                                    <p class="text-muted small mb-0">You'll receive a detailed quotation for approval</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start">
                                <div class="step-icon bg-warning text-white me-3">
                                    <i class="fas fa-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Work Begins</h6>
                                    <p class="text-muted small mb-0">Once approved, maintenance work will commence</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .maintenance-header {
        background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
    }
    
    .breadcrumb-dark .breadcrumb-item a {
        text-decoration: none;
    }
    
    .breadcrumb-dark .breadcrumb-item a:hover {
        text-decoration: underline;
    }
    
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .step-icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        font-weight: bold;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }
    
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
    }
    
    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
        color: #000;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-resize textarea
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            }
        });
    </script>
}
