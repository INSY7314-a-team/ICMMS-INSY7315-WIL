@model ICCMS_Web.Models.ProjectDetailsViewModel

<div id="phasesContainer">
    @if (Model.Phases.Any())
    {
        @foreach (var phase in Model.Phases)
        {
            <div class="card mb-4 border-0 shadow-sm rounded-3 phase-card" data-phase-id="@phase.PhaseId">
                <!-- ===== HEADER ===== -->
                <div class="card-header bg-light py-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <div class="d-flex flex-column">
                            <h6 class="fw-bold mb-0">@phase.Name</h6>
                            <small class="text-muted">
                                Status: <span class="badge bg-info text-dark">@phase.Status</span>
                                &nbsp;|&nbsp; Budget: R @phase.Budget.ToString("N0")
                            </small>
                        </div>
                        <div class="d-flex flex-wrap gap-2 mt-2 mt-md-0">
                            <button class="btn btn-outline-success btn-sm btnAddTask" data-phase-id="@phase.PhaseId">
                                <i class="bi bi-plus-circle me-1"></i> Add Task
                            </button>
                            <button class="btn btn-outline-warning btn-sm btnEditPhase" data-phase-id="@phase.PhaseId">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </button>
                            <button class="btn btn-outline-danger btn-sm btnDeletePhase" data-phase-id="@phase.PhaseId">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>

                <!-- ===== TASK LIST ===== -->
                <div class="card-body p-0">
                    @if (Model.Tasks.Any(t => t.PhaseId == phase.PhaseId))
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in Model.Tasks.Where(t => t.PhaseId == phase.PhaseId))
                            {
                                <li class="list-group-item px-3 py-3 d-flex justify-content-between align-items-center task-item" data-task-id="@task.TaskId">
                                    <div>
                                        <div class="fw-semibold">@task.Name</div>
                                        <div class="small text-muted">@task.Description</div>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-secondary">@task.Status</span>
                                        <button class="btn btn-outline-warning btn-sm btnEditTask" data-task-id="@task.TaskId" title="Edit Task">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm btnDeleteTask" data-task-id="@task.TaskId" title="Delete Task">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted fst-italic px-3 py-3 mb-0">No tasks yet. Add one to start this phase.</p>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-light text-center border">
            <i class="bi bi-inboxes me-2"></i> No phases created yet.
            <strong>Click “Add Phase”</strong> to begin project planning.
        </div>
    }
</div>

<style>
    /* Adds better breathing room between items */
    #phasesContainer .card {
        border-radius: 1rem;
    }

    #phasesContainer .card-header {
        border-bottom: 1px solid #e0e0e0;
    }

    #phasesContainer .list-group-item {
        border: none;
        border-top: 1px solid #eee;
        transition: background 0.15s ease-in-out;
    }

    #phasesContainer .list-group-item:hover {
        background: #f8f9fa;
    }

    #phasesContainer .btn {
        min-width: 90px;
    }

    #phasesContainer small.text-muted {
        font-size: 0.8rem;
    }
</style>
