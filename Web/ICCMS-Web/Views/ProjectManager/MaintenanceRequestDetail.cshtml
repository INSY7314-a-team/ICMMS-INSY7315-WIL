@model ICCMS_Web.Models.MaintenanceRequestDto
@{
    ViewData["Title"] = $"Maintenance Request: {Model.MaintenanceRequestId.Substring(0, Math.Min(8, Model.MaintenanceRequestId.Length))}";
    Layout = "_Layout";
    
    var project = ViewBag.Project as ICCMS_Web.Models.ProjectDto;
    
    var statusClass = Model.Status?.ToLowerInvariant() switch
    {
        "pending" or "submitted" => "warning",
        "approved" or "assigned" => "success",
        "rejected" => "danger",
        "in progress" or "inprogress" => "info",
        "resolved" or "completed" => "success",
        "cancelled" => "danger",
        _ => "secondary"
    };
    
    var priorityClass = Model.Priority?.ToLower() switch
    {
        "low" => "info",
        "medium" => "warning",
        "high" => "danger",
        _ => "secondary"
    };
}

<div class="pm-project-detail-container">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "ProjectManager")" class="text-decoration-none">
                    <i class="fa-solid fa-home"></i> Dashboard
                </a>
            </li>
            @if (project != null)
            {
                <li class="breadcrumb-item">
                    <a href="@Url.Action("ProjectDetail", "ProjectManager", new { projectId = project.ProjectId })" class="text-decoration-none">
                        <i class="fa-solid fa-project-diagram"></i> @project.Name
                    </a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fa-solid fa-wrench"></i> Maintenance Request #@Model.MaintenanceRequestId.Substring(0, Math.Min(8, Model.MaintenanceRequestId.Length))
            </li>
        </ol>
    </nav>

    <!-- Request Information Header -->
    <div class="row mb-4 pm-project-header">
        <div class="col-md-8">
            <h4 class="mb-2">
                <i class="fa-solid fa-wrench me-2"></i>Maintenance Request #@Model.MaintenanceRequestId.Substring(0, Math.Min(8, Model.MaintenanceRequestId.Length))
            </h4>
            <p class="mb-1">Project: <span>@(project?.Name ?? Model.ProjectId)</span></p>
            <p class="mb-0">Description: <span>@Model.Description</span></p>
        </div>
        <div class="col-md-4 text-end">
            <div class="mb-2">
                <span class="badge bg-@statusClass me-2">@Model.Status</span>
                <span class="badge bg-@priorityClass">@Model.Priority Priority</span>
            </div>
            <small>
                <i class="fa-solid fa-calendar me-1"></i>
                <span>Created: @Model.CreatedAt.ToString("dd MMM yyyy")</span>
                @if (Model.ResolvedAt.HasValue)
                {
                    <br />
                    <span>Resolved: @Model.ResolvedAt.Value.ToString("dd MMM yyyy")</span>
                }
            </small>
        </div>
    </div>

    <!-- Request Details Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <!-- Request Information Card -->
            <div class="card mb-4 pm-stats-card">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="fa-solid fa-info-circle me-2"></i>Request Information
                    </h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Request ID</small>
                            <div class="fw-bold">@Model.MaintenanceRequestId</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Priority</small>
                            <div class="fw-bold">
                                <span class="badge bg-@priorityClass">@Model.Priority</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Status</small>
                            <div class="fw-bold">
                                <span class="badge bg-@statusClass">@Model.Status</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Requested By</small>
                            <div class="fw-bold">@Model.RequestedBy</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Created At</small>
                            <div class="fw-bold">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</div>
                        </div>
                        @if (Model.ResolvedAt.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <small class="text-muted d-block">Resolved At</small>
                                <div class="fw-bold">@Model.ResolvedAt.Value.ToString("dd MMM yyyy HH:mm")</div>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.AssignedTo))
                        {
                            <div class="col-md-12 mb-3">
                                <small class="text-muted d-block">Assigned To</small>
                                <div class="fw-bold">@Model.AssignedTo</div>
                            </div>
                        }
                        <div class="col-12 mb-2">
                            <small class="text-muted d-block">Full Description</small>
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Attached Photo Card -->
            <div class="card mb-4 pm-stats-card">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="fa-solid fa-camera me-2"></i>Attached Photo
                    </h6>
                    @if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
                    {
                        <div class="text-center">
                            <img src="@Model.MediaUrl"
                                 alt="Attached Media"
                                 class="img-fluid rounded shadow-sm mb-2"
                                 style="max-height: 400px; object-fit: contain; cursor: pointer;"
                                 onclick="showImageModal('@Model.MediaUrl')" />
                            <p class="text-muted small mb-0">Click to view in full size</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-image fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No image attached</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Timeline -->
        <div class="col-md-4">
            <div class="card pm-stats-card">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="fa-solid fa-clock me-2"></i>Request Timeline
                    </h6>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Created</h6>
                                <p class="text-muted mb-0 small">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                        </div>

                        @if (Model.ResolvedAt.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Resolved</h6>
                                    <p class="text-muted mb-0 small">@Model.ResolvedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    @if (Model.Status == "Pending" || Model.Status == "Submitted")
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card pm-stats-card">
                    <div class="card-body">
                        <h6 class="mb-3">
                            <i class="fa-solid fa-tasks me-2"></i>Actions
                        </h6>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success approve-request-btn" 
                                    data-request-id="@Model.MaintenanceRequestId"
                                    data-project-id="@Model.ProjectId"
                                    data-bs-toggle="modal"
                                    data-bs-target="#maintenanceRequestWizardModal">
                                <i class="fa-solid fa-check me-1"></i>Approve & Create Phases/Tasks
                            </button>
                            <button class="btn btn-danger reject-request-btn" 
                                    data-request-id="@Model.MaintenanceRequestId"
                                    data-project-id="@Model.ProjectId">
                                <i class="fa-solid fa-times me-1"></i>Reject
                            </button>
                            @if (project != null)
                            {
                                <a href="@Url.Action("ProjectDetail", "ProjectManager", new { projectId = project.ProjectId })" 
                                   class="btn btn-outline-info">
                                    <i class="fa-solid fa-arrow-left me-1"></i>Back to Project
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                @if (project != null)
                {
                    <a href="@Url.Action("ProjectDetail", "ProjectManager", new { projectId = project.ProjectId })" 
                       class="btn btn-outline-info">
                        <i class="fa-solid fa-arrow-left me-1"></i>Back to Project
                    </a>
                }
            </div>
        </div>
    }
</div>

<!-- Image Viewer Modal -->
<div class="modal fade" id="maintenanceImageModal" tabindex="-1" aria-labelledby="maintenanceImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="maintenanceImageModalLabel">Request Image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="maintenanceImageFull" src="" alt="Maintenance Request Image" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<!-- Include Wizard -->
@await Html.PartialAsync("_MaintenanceRequestWizard")

<!-- Include CSS -->
<link rel="stylesheet" href="~/css/pm-project-detail.css" />

<!-- Include JavaScript -->
<script src="~/js/pm-maintenance-requests.js"></script>
<script src="~/js/maintenance-request-wizard.js"></script>

<script>
    // Show image modal
    function showImageModal(imageUrl) {
        document.getElementById("maintenanceImageFull").src = imageUrl;
        const modal = new bootstrap.Modal(document.getElementById("maintenanceImageModal"));
        modal.show();
    }
</script>

<style>
    .timeline {
        position: relative;
        padding-left: 25px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 12px;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: #e9ecef;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: 5px;
        top: 6px;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #e9ecef;
    }
</style>

