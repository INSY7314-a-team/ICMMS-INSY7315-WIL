@using ICCMS_Web.Models

@model FileReviewViewModel
@{
    ViewData["Title"] = "File Review";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Document Review</h1>
        <div class="flex items-center space-x-2">
            <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <span class="text-sm text-gray-600">
                @Model.Documents.Count(d => d.Status == DocumentStatus.Pending) documents pending review
            </span>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="border-b border-gray-200">
            <nav class="flex space-x-8 px-6">
                <button class="py-4 border-b-2 border-blue-700 text-blue-700 font-medium text-sm">
                    Pending Review (@Model.Documents.Count(d => d.Status == DocumentStatus.Pending))
                </button>
                <button class="py-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
                    Approved (@Model.Documents.Count(d => d.Status == DocumentStatus.Approved))
                </button>
                <button class="py-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
                    Rejected (@Model.Documents.Count(d => d.Status == DocumentStatus.Rejected))
                </button>
            </nav>
        </div>

        <div class="p-6">
            <div class="space-y-4">
                @foreach (var document in Model.Documents)
                {
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-sm transition-shadow">
                        <div class="flex items-start justify-between">
                            <div class="flex items-start space-x-4">
                                <div class="p-3 bg-blue-100 rounded-lg">
                                    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-semibold text-gray-900">@document.Name</h3>
                                    <p class="text-gray-600 text-sm">@document.Project</p>
                                    <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
                                        <span>Uploaded by @document.UploadedBy</span>
                                        <span>•</span>
                                        <span>@document.Size</span>
                                        <span>•</span>
                                        <span>@document.UploadDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="flex items-center space-x-3">
                                <span class="px-2 py-1 rounded-full text-xs font-medium @(document.Priority switch {
                                    DocumentPriority.High => "bg-red-100 text-red-800",
                                    DocumentPriority.Medium => "bg-yellow-100 text-yellow-800",
                                    DocumentPriority.Low => "bg-green-100 text-green-800",
                                    _ => "bg-gray-100 text-gray-800"
                                })">
                                    @document.Priority priority
                                </span>
                                <span class="px-3 py-1 rounded-full text-xs font-medium flex items-center space-x-1 @(document.Status switch {
                                    DocumentStatus.Approved => "bg-green-100 text-green-800",
                                    DocumentStatus.Rejected => "bg-red-100 text-red-800",
                                    DocumentStatus.Pending => "bg-yellow-100 text-yellow-800",
                                    _ => "bg-gray-100 text-gray-800"
                                })">
                                    @if (document.Status == DocumentStatus.Approved)
                                    {
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    }
                                    else if (document.Status == DocumentStatus.Rejected)
                                    {
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    }
                                    <span class="capitalize">@document.Status</span>
                                </span>
                            </div>
                        </div>
                        
                        <div class="flex items-center space-x-3 mt-4">
                            <button class="flex items-center space-x-2 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors text-sm">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                <span>Preview</span>
                            </button>
                            <button class="flex items-center space-x-2 px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span>Download</span>
                            </button>
                            
                            @if (document.Status == DocumentStatus.Pending)
                            {
                                <button class="flex items-center space-x-2 px-3 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    <span>Approve</span>
                                </button>
                                <button class="flex items-center space-x-2 px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                    <span>Reject</span>
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>