@using ICCMS_Web.Models

@model ContractorViewModel
@{
    ViewData["Title"] = "Contractor Tracker";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Contractor Tracker</h1>
        <button class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center space-x-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Add Contractor</span>
        </button>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="border-b border-gray-200">
            <nav class="flex space-x-8 px-6">
                <button class="py-4 border-b-2 border-blue-700 text-blue-700 font-medium text-sm">
                    Active Contractors (@Model.Contractors.Count(c => c.Status == ContractorStatus.Active))
                </button>
                <button class="py-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
                    Available (@Model.Contractors.Count(c => c.Status == ContractorStatus.Available))
                </button>
                <button class="py-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">
                    Performance (@Model.Contractors.Count)
                </button>
            </nav>
        </div>

        <div class="p-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                @foreach (var contractor in Model.Contractors)
                {
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow card-hover">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex items-center space-x-3">
                                <div class="h-12 w-12 bg-blue-600 rounded-full flex items-center justify-center text-white font-medium">
                                    @contractor.Avatar
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">@contractor.Name</h3>
                                    <p class="text-gray-600 text-sm">@contractor.Specialty</p>
                                    <div class="flex items-center space-x-1 mt-1">
                                        <svg class="h-4 w-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                        </svg>
                                        <span class="text-sm font-medium">@contractor.Rating</span>
                                    </div>
                                </div>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-medium @(contractor.Status == ContractorStatus.Active ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                @contractor.Status
                            </span>
                        </div>

                        @if (!string.IsNullOrEmpty(contractor.CurrentProject))
                        {
                            <div class="mb-4 p-3 bg-blue-50 rounded-lg">
                                <p class="text-sm font-medium text-blue-900">Current Project</p>
                                <p class="text-sm text-blue-700">@contractor.CurrentProject</p>
                                <div class="mt-2">
                                    <div class="flex justify-between text-xs mb-1">
                                        <span>Progress</span>
                                        <span>@contractor.TasksCompleted/@contractor.TasksTotal tasks</span>
                                    </div>
                                    <div class="w-full bg-blue-200 rounded-full h-1">
                                        <div class="bg-blue-600 h-1 rounded-full progress-bar" style="width: @(Math.Round((double)contractor.TasksCompleted / contractor.TasksTotal * 100))%"></div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="space-y-2 text-sm">
                            <div class="flex items-center space-x-2 text-gray-600">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                <span>@contractor.Phone</span>
                            </div>
                            <div class="flex items-center space-x-2 text-gray-600">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                <span>@contractor.Email</span>
                            </div>
                            <div class="flex items-center space-x-2 text-gray-600">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <span>@contractor.Location</span>
                            </div>
                        </div>

                        <div class="mt-4 flex space-x-2">
                            <button class="flex-1 px-3 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors text-sm">
                                Assign Task
                            </button>
                            <button class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors text-sm">
                                Contact
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>