<!-- Task Completion Review Modal -->
<div class="modal fade" id="taskCompletionReviewModal" tabindex="-1" aria-labelledby="taskCompletionReviewModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskCompletionReviewModalLabel">
                    <i class="fa-solid fa-tasks me-2"></i>Review Task Completion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="taskCompletionContent">
                    <!-- Task completion details will be loaded here -->
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading task completion details...</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger me-2" id="rejectCompletionBtn">
                    <i class="fa-solid fa-times me-1"></i>Reject
                </button>
                <button type="button" class="btn btn-success" id="approveCompletionBtn">
                    <i class="fa-solid fa-check me-1"></i>Approve
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Completion Rejection Feedback Modal -->
<div class="modal fade" id="completionRejectionModal" tabindex="-1" aria-labelledby="completionRejectionModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="completionRejectionModalLabel">
                    <i class="fa-solid fa-times-circle me-2"></i>Reject Task Completion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="rejectionFeedback" class="form-label">Rejection Feedback</label>
                    <textarea class="form-control" id="rejectionFeedback" rows="4"
                        placeholder="Please provide feedback on why this task completion is being rejected..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRejectCompletionBtn">
                    <i class="fa-solid fa-times me-1"></i>Reject Completion
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const taskCompletionModalElement = document.getElementById('taskCompletionReviewModal');
        const completionRejectionModalElement = document.getElementById('completionRejectionModal');
        
        // Create Bootstrap modal instances
        const taskCompletionModal = taskCompletionModalElement ? new bootstrap.Modal(taskCompletionModalElement) : null;
        const completionRejectionModal = completionRejectionModalElement ? new bootstrap.Modal(completionRejectionModalElement) : null;
        const taskCompletionContent = document.getElementById('taskCompletionContent');
        const approveCompletionBtn = document.getElementById('approveCompletionBtn');
        const rejectCompletionBtn = document.getElementById('rejectCompletionBtn');
        const confirmRejectCompletionBtn = document.getElementById('confirmRejectCompletionBtn');
        const rejectionFeedback = document.getElementById('rejectionFeedback');

        // Check if all required elements exist
        if (!taskCompletionModal || !completionRejectionModal || !taskCompletionContent || 
            !approveCompletionBtn || !rejectCompletionBtn || !confirmRejectCompletionBtn || !rejectionFeedback) {
            console.warn('Task completion modal elements not found');
            return;
        }

        let currentTaskId = null;

        // Handle approve button
        approveCompletionBtn.addEventListener('click', function () {
            if (!currentTaskId) return;

            if (!confirm('Are you sure you want to approve this task completion?')) {
                return;
            }

            approveCompletionBtn.disabled = true;
            approveCompletionBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-1"></i>Approving...';

            fetch(`/ProjectManager/ApproveTaskCompletion?taskId=${currentTaskId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessMessage('Task completion approved successfully!');
                        taskCompletionModal.hide();
                        // Refresh approvals list
                        if (typeof refreshApprovalsList === 'function') {
                            refreshApprovalsList();
                        }
                    } else {
                        showErrorMessage(data.error || 'Failed to approve task completion');
                    }
                })
                .catch(error => {
                    console.error('Error approving task completion:', error);
                    showErrorMessage('An error occurred while approving the task completion');
                })
                .finally(() => {
                    approveCompletionBtn.disabled = false;
                    approveCompletionBtn.innerHTML = '<i class="fa-solid fa-check me-1"></i>Approve';
                });
        });

        // Handle reject button
        rejectCompletionBtn.addEventListener('click', function () {
            completionRejectionModal.show();
        });

        // Handle confirm reject
        confirmRejectCompletionBtn.addEventListener('click', function () {
            if (!currentTaskId) return;

            const feedback = rejectionFeedback.value.trim();

            confirmRejectCompletionBtn.disabled = true;
            confirmRejectCompletionBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-1"></i>Rejecting...';

            fetch(`/ProjectManager/RejectTaskCompletion?taskId=${currentTaskId}&feedback=${encodeURIComponent(feedback)}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessMessage('Task completion rejected');
                        completionRejectionModal.hide();
                        taskCompletionModal.hide();
                        // Refresh approvals list
                        if (typeof refreshApprovalsList === 'function') {
                            refreshApprovalsList();
                        }
                    } else {
                        showErrorMessage(data.error || 'Failed to reject task completion');
                    }
                })
                .catch(error => {
                    console.error('Error rejecting task completion:', error);
                    showErrorMessage('An error occurred while rejecting the task completion');
                })
                .finally(() => {
                    confirmRejectCompletionBtn.disabled = false;
                    confirmRejectCompletionBtn.innerHTML = '<i class="fa-solid fa-times me-1"></i>Reject Completion';
                });
        });

        // Reset rejection feedback when modal is shown
        if (completionRejectionModal) {
            completionRejectionModal.addEventListener('show.bs.modal', function () {
                rejectionFeedback.value = '';
            });
        }

        // Global function to show task completion (called from approval actions)
        window.showTaskCompletion = function (taskId) {
            currentTaskId = taskId;
            loadTaskCompletionDetails(taskId);
            taskCompletionModal.show();
        };

        function loadTaskCompletionDetails(taskId) {
            // Show loading state
            taskCompletionContent.innerHTML = `
            <div class="text-center py-4">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading task completion details...</p>
            </div>
        `;

            // Fetch completion report details
            fetch(`/ProjectManager/GetCompletionReport?id=${encodeURIComponent(taskId)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.report) {
                        displayCompletionReport(data.report);
                    } else {
                        showErrorMessage(data.error || 'Failed to load completion report');
                    }
                })
                .catch(error => {
                    console.error('Error loading completion report:', error);
                    showErrorMessage('Failed to load completion report details');
                });
        }

        function displayCompletionReport(report) {
            const attachmentsHtml = report.attachedDocumentIds && report.attachedDocumentIds.length > 0
                ? report.attachedDocumentIds.map((docId, index) => `
                    <button class="btn btn-sm btn-outline-primary me-1 mb-1 view-attachment-btn" 
                            data-document-id="${docId}"
                            data-report-type="completion"
                            data-report-id="${report.completionReportId}">
                        <i class="fa-solid fa-paperclip me-1"></i>Document ${index + 1}
                    </button>
                `).join('')
                : '<p class="text-muted">No attachments</p>';

            taskCompletionContent.innerHTML = `
                <div class="task-completion-details">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Task Information</h6>
                            <p><strong>Task ID:</strong> ${report.taskId}</p>
                            <p><strong>Project ID:</strong> ${report.projectId}</p>
                            <p><strong>Status:</strong> <span class="badge bg-warning">Awaiting Approval</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6>Completion Details</h6>
                            <p><strong>Submitted By:</strong> ${report.submittedBy}</p>
                            <p><strong>Final Hours:</strong> ${report.finalHours}</p>
                            <p><strong>Completion Date:</strong> ${new Date(report.completionDate).toLocaleDateString()}</p>
                            <p><strong>Submitted:</strong> ${new Date(report.submittedAt).toLocaleDateString()}</p>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Completion Summary</h6>
                        <div class="card">
                            <div class="card-body">
                                <p>${report.completionSummary || 'No summary provided'}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Quality Check</h6>
                        <div class="card">
                            <div class="card-body">
                                <p>${report.qualityCheck || 'No quality check notes provided'}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <h6>Attachments & Documents</h6>
                        <div id="taskAttachments">
                            ${attachmentsHtml}
                        </div>
                    </div>
                </div>
            `;
        }
    });

    function showSuccessMessage(message) {
        const notification = document.createElement('div');
        notification.className = 'alert alert-success position-fixed';
        notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        notification.innerHTML = `
        <div class="d-flex align-items-center">
            <i class="fa-solid fa-check-circle me-2"></i>
            <span>${message}</span>
        </div>
    `;
        document.body.appendChild(notification);
        setTimeout(() => notification.remove(), 3000);
    }

    function showErrorMessage(message) {
        const notification = document.createElement('div');
        notification.className = 'alert alert-danger position-fixed';
        notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        notification.innerHTML = `
        <div class="d-flex align-items-center">
            <i class="fa-solid fa-exclamation-circle me-2"></i>
            <span>${message}</span>
        </div>
    `;
        document.body.appendChild(notification);
        setTimeout(() => notification.remove(), 5000);
    }
</script>
