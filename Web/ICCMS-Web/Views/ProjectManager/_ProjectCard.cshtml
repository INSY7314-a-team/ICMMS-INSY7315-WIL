@model ICCMS_Web.Models.ProjectDto

@{
    // Get pre-processed data from ViewBag (set in dashboard)
    var phases = ViewBag.Phases as List<ICCMS_Web.Models.PhaseDto> ?? new List<ICCMS_Web.Models.PhaseDto>();
    var tasks = ViewBag.Tasks as List<ICCMS_Web.Models.ProjectTaskDto> ?? new List<ICCMS_Web.Models.ProjectTaskDto>();
    var estimate = ViewBag.Estimate as ICCMS_Web.Models.EstimateDto;
    var progress = ViewBag.Progress as int? ?? 0;
    var statusBadgeClass = ViewBag.StatusBadgeClass as string ?? "badge-light";

    // Calculate some derived values
    var totalTasks = tasks.Count;
    var completedTasks = tasks.Count(t => t.Status?.Equals("Completed", StringComparison.OrdinalIgnoreCase) == true);
    var taskProgress = totalTasks > 0 ? (int)Math.Round((double)completedTasks / totalTasks * 100) : 0;
}

<div id="project-@Model.ProjectId" class="project-card card h-100 construction-border-thin"
    data-project-id="@Model.ProjectId" data-project-name="@Model.Name" data-project-status="@Model.Status"
    data-client-id="@Model.ClientId" data-start-date="@Model.StartDate.ToString("o")"
    data-end-date-planned="@Model.EndDatePlanned.ToString("o")"
    data-end-date-actual="@(Model.EndDateActual.HasValue? Model.EndDateActual.Value.ToString("o") : string.Empty)"
    data-budget-planned="@Model.BudgetPlanned">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
                <h6 class="card-title mb-1 fw-bold">
                    @Model.Name
                </h6>
                <p class="card-subtitle small mb-0">
                    @{
                        // Prefer client name if available
                        var clientName = ViewBag.ClientName as string;
                        if (string.IsNullOrWhiteSpace(clientName))
                        {
                            // clientName = Model.ClientId; // fallback
                            clientName = "FallBack";
                        }
                    }
                    @clientName
                </p>
            </div>
            <div class="text-end d-flex align-items-center gap-2">
                @if (!string.Equals(Model.Status, "Draft", StringComparison.OrdinalIgnoreCase))
                {
                    <button type="button" class="btn btn-sm btn-outline-secondary" title="Expand details"
                        onclick="toggleProjectDetails('@Model.ProjectId')">
                        <i class="fa-solid fa-chevron-down"></i>
                    </button>
                }
                <span class="status-badge">@Model.Status</span>
            </div>
        </div>
    </div>

    <div class="card-body">
        <!-- Project Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text small mb-3">
                @(Model.Description.Length > 100 ? Model.Description.Substring(0, 100) + "..." : Model.Description)
            </p>
        }

        <!-- Project Stats -->
        <div class="row g-2 mb-3">
            <div class="col-12">
                <div class="stat-item mb-2">
                    <small>Start Date: <span>@Model.StartDate.ToString("MMM dd, yyyy")</span></small>
                </div>
            </div>
            <div class="col-12">
                <div class="stat-item mb-2">
                    <small>Planned End: <span>@Model.EndDatePlanned.ToString("MMM dd, yyyy")</span></small>
                </div>
            </div>
            <div class="col-12">
                <div class="stat-item mb-2">
                    <small>Planned Budget: <span>R @Model.BudgetPlanned.ToString("N0")</span></small>
                </div>
            </div>
        </div>

        <!-- Progress Bar -->
        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
                <small class="progress-label">Project Progress:</small>
                <small class="progress-percentage">@progress%</small>
            </div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @progress%;" aria-valuenow="@progress"
                    aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>

        <!-- Task Progress -->
        @if (totalTasks > 0)
        {
            <div class="task-progress">
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <small class="progress-label">Task Progress</small>
                    <small class="progress-percentage">@taskProgress%</small>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @taskProgress%" aria-valuenow="@taskProgress"
                        aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        }

        <!-- Phases Summary -->
        @if (phases.Any())
        {
            <div class="phases-summary">
                <small class="phases-label">Phases (@phases.Count)</small>
                <div class="d-flex flex-wrap gap-1">
                    @foreach (var phase in phases.Take(3))
                    {
                        <span class="phase-badge">@phase.Name</span>
                    }
                    @if (phases.Count > 3)
                    {
                        <span class="phase-badge more">+@(phases.Count - 3) more</span>
                    }
                </div>
            </div>
        }

        @if (!string.Equals(Model.Status, "Draft", StringComparison.OrdinalIgnoreCase))
        {
            <!-- Expandable phases/tasks details (hidden by default) -->
            <div id="proj-details-@Model.ProjectId" class="mt-3" style="display:none;">
                <div class="accordion" id="proj-acc-@Model.ProjectId">
                    @if (phases.Any())
                    {
                        var grouped = phases.Select(p => new
                        {
                            Phase = p,
                            PhaseTasks = tasks.Where(t => t.PhaseId == p.PhaseId).ToList()
                        }).ToList();
                        foreach (var grp in grouped)
                        {
                            <div class="card mb-2">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span><i class="fa-solid fa-layer-group me-2 text-warning"></i>@grp.Phase.Name</span>
                                    <small class="text-muted">@grp.PhaseTasks.Count task(s)</small>
                                </div>
                                <ul class="list-group list-group-flush">
                                    @if (grp.PhaseTasks.Any())
                                    {
                                        foreach (var t in grp.PhaseTasks)
                                        {
                                            var status = (t.Status ?? "").ToLowerInvariant();
                                            var badge = status == "done" || status == "completed" ? "success" : status == "doing" || status
                                            == "inprogress" ? "warning" : "secondary";
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@t.Name</span>
                                                <span class="badge bg-@badge text-dark">@t.Status</span>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="list-group-item text-muted">No tasks</li>
                                    }
                                </ul>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted">No phases yet</div>
                    }
                </div>
            </div>
        }

        <!-- Estimate Info -->
        @if (estimate != null)
        {
            <div class="estimate-info">
                <small class="estimate-label">Latest Estimate</small>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="estimate-amount">R @estimate.TotalAmount.ToString("N0")</span>
                    <small class="estimate-date">@estimate.CreatedAt.ToString("MMM dd")</small>
                </div>
            </div>
        }
    </div>

    <div class="card-footer">
        <div class="action-buttons">
            @if (string.Equals(Model.Status, "Draft", StringComparison.OrdinalIgnoreCase))
            {
                <!-- Primary action for Draft projects -->
                <button type="button" class="btn-action btn-primary" onclick="continueProjectSetup('@Model.ProjectId')"
                    title="Continue project setup">
                    Continue Setup
                </button>
            }
            else if (string.Equals(Model.Status, "Active", StringComparison.OrdinalIgnoreCase))
            {
                <!-- Primary action for Active projects -->
                <button type="button" class="btn-action btn-primary" onclick="viewProjectDetails('@Model.ProjectId')"
                    title="View Progress">
                    View Progress
                </button>

                <!-- Secondary actions dropdown -->
                <div class="dropdown">
                    <button class="btn-action btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Manage
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="openPlanEditor('@Model.ProjectId','phases')">Add
                                Phases</a></li>
                        <li><a class="dropdown-item" href="#" onclick="openPlanEditor('@Model.ProjectId','tasks')">Assign
                                Tasks</a></li>
                    </ul>
                </div>
            }
            else
            {
                <!-- Primary action for Planning and other statuses -->
                <button type="button" class="btn-action btn-primary" onclick="openProjectEstimates('@Model.ProjectId')"
                    title="View Estimates">
                    View Estimates
                </button>

                <!-- Secondary actions dropdown -->
                <div class="dropdown">
                    <button class="btn-action btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Manage
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="openPlanEditor('@Model.ProjectId','phases')">Add
                                Phases</a></li>
                        <li><a class="dropdown-item" href="#" onclick="openPlanEditor('@Model.ProjectId','tasks')">Assign
                                Tasks</a></li>
                        @if (estimate == null)
                        {
                            <li><a class="dropdown-item" href="#"
                                    onclick="openBlueprintPicker('@Model.ProjectId', function(url){ processBlueprintAndOpen('@Model.ProjectId', url); })">Process
                                    Blueprint</a></li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" href="#" onclick="openEstimateEditor('@Model.ProjectId')">Edit Line
                                    Items</a></li>
                            <li><a class="dropdown-item" href="#" onclick="openEstimateEditor('@Model.ProjectId')">Send
                                    Quote</a></li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Project card action functions
    function viewProjectDetails(projectId) {
        // Navigate to project details page
        window.location.href = `/ProjectManager/ProjectDetails/${projectId}`;
    }

    function editProject(projectId) {
        // Open project edit modal or navigate to edit page
        window.location.href = `/ProjectManager/EditProject/${projectId}`;
    }

    function completeProject(projectId) {
        if (confirm('Complete the project setup? This will activate the project.')) {
            // Call API to complete project
            fetch(`/ProjectManager/CompleteDraftProject/${projectId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Project completed successfully!', 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showToast('Failed to complete project: ' + data.error, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('An error occurred while completing the project.', 'error');
                });
        }
    }

    function addPhases(projectId) {
        // Navigate to add phases page
        window.location.href = `/ProjectManager/AddPhases?projectId=${projectId}`;
    }

    function toggleProjectDetails(projectId) {
        const el = document.getElementById(`proj-details-${projectId}`);
        if (!el) return;
        const isShown = el.style.display !== 'none';
        el.style.display = isShown ? 'none' : 'block';
        // Toggle expanded class on the card container to let CSS span the full row
        const card = document.getElementById(`project-${projectId}`);
        if (card) {
            if (isShown) {
                card.classList.remove('expanded');
            } else {
                card.classList.add('expanded');
            }
        }
        if (!isShown) {
            // If container is empty (lazy), fetch latest and render
            if (!el.dataset.loaded && el.querySelectorAll('.card').length === 0) {
                (async () => {
                    try {
                        const [phasesRes, tasksRes] = await Promise.all([
                            fetch(`/ProjectManager/GetProjectPhases?id=${encodeURIComponent(projectId)}`),
                            fetch(`/ProjectManager/GetProjectTasks?id=${encodeURIComponent(projectId)}`)
                        ]);
                        const phases = await phasesRes.json();
                        const tasks = await tasksRes.json();
                        el.innerHTML = renderPhaseTaskDetails(phases, tasks);
                        el.dataset.loaded = 'true';
                    } catch (e) { console.warn('Failed to load details', e); }
                })();
            }
        }
    }

    function renderPhaseTaskDetails(phases, tasks) {
        if (!Array.isArray(phases) || phases.length === 0) {
            return '<div class="text-muted">No phases yet</div>';
        }
        const byPhase = phases.map(p => {
            const pts = (tasks || []).filter(t => t.phaseId === p.phaseId);
            const items = pts.length
                ? pts.map(t => {
                    const s = (t.status || '').toLowerCase();
                    const badge = (s === 'done' || s === 'completed') ? 'success' : (s === 'doing' || s === 'inprogress') ? 'warning' : 'secondary';
                    return `<li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>${escapeHtml(t.name || '')}</span>
                                <span class="badge bg-${badge} text-dark">${escapeHtml(t.status || 'Pending')}</span>
                            </li>`;
                }).join('')
                : '<li class="list-group-item text-muted">No tasks</li>';
            return `<div class="card mb-2">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span><i class="fa-solid fa-layer-group me-2 text-warning"></i>${escapeHtml(p.name || 'Phase')}</span>
                            <small class="text-muted">${pts.length} task(s)</small>
                        </div>
                        <ul class="list-group list-group-flush">${items}</ul>
                    </div>`;
        }).join('');
        return `<div class="accordion">${byPhase}</div>`;
    }

    function generateQuotation(projectId) {
        // Navigate to generate quotation page
        window.location.href = `/ProjectManager/GenerateQuotation?projectId=${projectId}`;
    }

    function editLineItems(projectId) {
        // Navigate to edit line items page
        window.location.href = `/ProjectManager/EditLineItems?projectId=${projectId}`;
    }

    function assignTasks(projectId) {
        // Navigate to task assignment page
        window.location.href = `/ProjectManager/AssignTasks?projectId=${projectId}`;
    }

    function openPlanEditor(projectId, mode) {
        // Only for Planning or Active projects â€” handled by server rendering of actions
        const modal = new bootstrap.Modal(document.getElementById('planEditorModal'));
        modal.show();
        setTimeout(async () => {
            if (!window.__planEditor) return;
            await window.__planEditor.init(projectId, mode);
        }, 100);
    }

    function continueProjectSetup(projectId) {
        // Open the wizard modal and preload existing draft data
        const modalEl = document.getElementById('projectCreationWizardModal');
        const modal = new bootstrap.Modal(modalEl);
        modal.show();

        // After wizard created, set its projectId and load data
        setTimeout(async () => {
            if (!window.__pcwInstance) return;
            window.__pcwInstance.projectId = projectId;
            try {
                // Load basic project
                const res = await fetch(`/ProjectManager/GetDraftProject?id=${encodeURIComponent(projectId)}`);
                const proj = await res.json();
                if (proj && proj.projectId) {
                    document.getElementById('projectName').value = proj.name || '';
                    document.getElementById('projectDescription').value = proj.description || '';
                    document.getElementById('clientSelect').value = proj.clientId || '';
                    if (proj.startDate) document.getElementById('startDate').value = (new Date(proj.startDate)).toISOString().slice(0, 10);
                    if (proj.endDatePlanned) document.getElementById('endDatePlanned').value = (new Date(proj.endDatePlanned)).toISOString().slice(0, 10);
                    if (typeof proj.budgetPlanned === 'number') document.getElementById('budgetPlanned').value = proj.budgetPlanned;
                }

                // Load phases
                const phasesRes = await fetch(`/ProjectManager/GetProjectPhases?id=${encodeURIComponent(projectId)}`);
                const phases = await phasesRes.json();
                const phasesContainer = document.getElementById('phasesContainer');
                phasesContainer.innerHTML = '';
                phases?.forEach(p => {
                    phasesContainer.appendChild(window.__pcwInstance.buildPhaseRow(p));
                });

                // Load tasks
                const tasksRes = await fetch(`/ProjectManager/GetProjectTasks?id=${encodeURIComponent(projectId)}`);
                const tasks = await tasksRes.json();
                const tasksContainer = document.getElementById('tasksContainer');
                tasksContainer.innerHTML = '';
                tasks?.forEach(t => {
                    tasksContainer.appendChild(window.__pcwInstance.buildTaskRow(t));
                });
            } catch (e) {
                console.warn('Failed to preload draft', e);
            }
        }, 300);
    }

    function activateMaintenance(projectId) {
        if (confirm('Activate maintenance mode for this project?')) {
            // Call API to activate maintenance
            fetch(`/ProjectManager/ActivateMaintenance`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ projectId: projectId })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Maintenance mode activated!', 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showToast('Failed to activate maintenance: ' + data.error, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('An error occurred while activating maintenance.', 'error');
                });
        }
    }

    function deleteProject(projectId) {
        if (confirm('Are you sure you want to delete this project? This action cannot be undone.')) {
            // Call API to delete project
            fetch(`/ProjectManager/DeleteProject/${projectId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Project deleted successfully!', 'success');
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showToast('Failed to delete project: ' + data.error, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('An error occurred while deleting the project.', 'error');
                });
        }
    }

    // Toast notification function
    function showToast(message, type = 'info') {
        // Create toast element
        const toast = document.createElement('div');
        toast.className = `toast align-items-center text-bg-${type === 'error' ? 'danger' : type} border-0`;
        toast.setAttribute('role', 'alert');
        toast.innerHTML = `
        <div class="d-flex">
            <div class="toast-body">${message}</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    `;

        // Add to page
        document.body.appendChild(toast);

        // Show toast
        const bsToast = new bootstrap.Toast(toast);
        bsToast.show();

        // Remove after hidden
        toast.addEventListener('hidden.bs.toast', () => {
            document.body.removeChild(toast);
        });
    }
</script>
