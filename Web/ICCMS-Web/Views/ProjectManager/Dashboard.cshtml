      <script>
      (function(){
        // Minimal, isolated, no dependency on dashboard.js
        const host = document.getElementById('accepted-quotes-list');
        if(!host) { return; }

        host.innerHTML = '<div class="muted">Loading…</div>';

        // try a few paths (works whether app runs from / or a virtual dir)
        const urls = [
          '@Url.Content("~/mock/quotes.json")',
          '/mock/quotes.json'
        ];

        (async function tryFetch(i){
          if(i >= urls.length){
            host.innerHTML = '<div class="muted">No accepted quotes yet.</div>';
            return;
          }
          try{
            const res = await fetch(urls[i], { cache: 'no-store' });
            // show exactly what path was used
            console.log('[accepted-quotes] fetch', urls[i], 'status', res.status);

            if(!res.ok) throw new Error('HTTP ' + res.status);

            // tolerate empty file: treat as []
            const txt = await res.text();
            const data = txt.trim() ? JSON.parse(txt) : [];

            const accepted = (Array.isArray(data) ? data : [])
              .filter(q => String(q.status || q.Status || '').toLowerCase() === 'accepted')
              .sort((a,b)=> new Date(b.decidedAt||b.DecidedAt||0) - new Date(a.decidedAt||a.DecidedAt||0))
              .slice(0,5);

            console.log('[accepted-quotes] items total:', Array.isArray(data)?data.length:'n/a', 'accepted:', accepted.length);

            if(!accepted.length){
              host.innerHTML = '<div class="muted">No accepted quotes yet.</div>';
              return;
            }

            host.innerHTML = accepted.map(q=>{
              const id = q.id || q.Id || 'Q-?';
              const title = q.title || q.Title || 'Quote';
              const client = q.clientName || q.ClientName || '';
              const total = 'R ' + (Number(q.total || q.Total || 0)).toLocaleString();
              const when = q.decidedAt || q.DecidedAt;
              const decided = when ? new Date(when).toLocaleString() : '—';
              return `
                <div class="d-flex align-items-start mb-2 pb-2 border-bottom">
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <strong>${title}</strong>
                        <div class="small muted">${client}</div>
                      </div>
                      <div class="text-end">
                        <div class="small muted">${id}</div>
                        <div>${total}</div>
                      </div>
                    </div>
                    <div class="small muted mt-1">Accepted: ${decided}</div>
                  </div>
                  <div class="ms-2">
                    <button class="btn btn-sm btn-brand btn-setup-project" data-qid="${id}">
                      <i class="fas fa-hammer me-1"></i>Start Setup
                    </button>
                  </div>
                </div>`;
            }).join('');
          }catch(err){
            console.log('[accepted-quotes] fetch failed for', urls[i], err);
            tryFetch(i+1);
          }
        })(0);
      })();
      </script>



