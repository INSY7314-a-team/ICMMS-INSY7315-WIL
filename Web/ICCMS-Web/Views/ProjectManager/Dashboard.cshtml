  <div class="ph-grid" id="projectsByPhase"></div>

  <script>
  (async function(){
    const mount = document.getElementById('projectsByPhase');
    if(!mount) return;

    // FETCH from your mock: wwwroot/mock/projects.json -> /mock/projects.json
    let data = [];
    try{
      const res = await fetch('/mock/projects.json', { cache: 'no-store' });
      if(!res.ok) throw new Error(res.status);
      data = await res.json();
    }catch(e){
      console.error('Could not load /mock/projects.json', e);
      mount.innerHTML = '<div class="proj-sub" style="padding:8px">No data.</div>';
      return;
    }

    // Helpers
    const rands = n => new Intl.NumberFormat(undefined,{style:'currency',currency:'ZAR',maximumFractionDigits:0}).format(Number(n)||0);
    const dotClass = s => {
      const v = (s||'').toLowerCase();
      if(['on track','in progress','completed'].includes(v)) return 'ok';
      if(['at risk','delayed'].includes(v)) return 'risk';
      if(['on hold'].includes(v)) return 'hold';
      if(['planning','planned'].includes(v)) return 'plan';
      return 'warn';
    };

    // Determine current phase per project.
    // Prefer: currentPhaseKey/Name OR first phase with status != "Done" OR fallback "Unassigned".
    function currentPhaseName(p){
      if(p.currentPhaseName) return p.currentPhaseName;
      if(Array.isArray(p.phases)){
        const nxt = p.phases.find(x => (x.status||'').toLowerCase() !== 'done');
        return (nxt && (nxt.phaseName || nxt.name)) || (p.phases[0] && (p.phases[0].phaseName || p.phases[0].name));
      }
      return 'Unassigned';
    }
    function currentPhaseKey(p){
      if(p.currentPhaseKey) return p.currentPhaseKey;
      if(Array.isArray(p.phases)){
        const nxt = p.phases.find(x => (x.status||'').toLowerCase() !== 'done') || p.phases[0];
        return (nxt && (nxt.phaseKey || (nxt.phaseName||nxt.name||'unassigned').toLowerCase().replace(/\s+/g,'-'))) || 'unassigned';
      }
      return 'unassigned';
    }

    // Collect phase columns (stable preferred order if present)
    const preferred = ['Site Prep','Access & Safety','Execution','QA & Closeout'];
    const phaseMap = new Map(); // key -> name
    data.forEach(p=>{
      const k = currentPhaseKey(p);
      const n = currentPhaseName(p);
      if(k && n) phaseMap.set(k, n);
    });

    // Order: preferred first (if present), then the rest alpha
    const present = new Map(Array.from(phaseMap).map(([k,n])=>[n,k]));
    const orderedNames = preferred.filter(n=>present.has(n))
      .concat(Array.from(phaseMap.values()).filter(n=>!preferred.includes(n)).sort((a,b)=>a.localeCompare(b)));
    const ordered = orderedNames.map(n=>[present.get(n) || n.toLowerCase().replace(/\s+/g,'-'), n]);

    // Build columns
    const colHtml = ([key,name]) => {
      const items = data.filter(p => currentPhaseKey(p) === key);
      const cards = items.map(p=>{
        const qs = p.quoteSummary || {};
        const sr = p.serviceRequests || {};
        const cs = p.contractorSummary || {};
        // Phase details from the matching phase (if available)
        const ph = (Array.isArray(p.phases) ? p.phases.find(x => (x.phaseKey||'')===key || (x.phaseName||'')===name) : null) || {};
        return `
          <div class="proj">
            <div class="proj-top">
              <div>
                <div class="proj-name"><span class="dot ${dotClass(p.status)}"></span>${p.name||''}</div>
                <div class="proj-sub">
                  ${p.clientName||''} • ${p.status||''}
                  ${name ? ` • Phase: <span class="badge">${name}${ph.status?` — ${ph.status}`:''}</span>` : ''}
                </div>
              </div>
              <div class="proj-sub">Progress <strong>${('progressPercent' in p)?(p.progressPercent||0):0}%</strong></div>
            </div>

            <div class="kv">
              <div><div class="k">Budget (Planned)</div><div class="v">${rands(p.budgetPlanned)}</div></div>
              <div><div class="k">Budget (Actual)</div><div class="v">${rands(p.budgetActual)}</div></div>
              <div><div class="k">Latest Quote</div><div class="v">
                ${(qs.latestQuoteStatus||'—')} ${qs.latestQuoteId?`• ${qs.latestQuoteId}`:''} ${qs.latestQuoteTotal?`• ${rands(qs.latestQuoteTotal)}`:''}
              </div></div>
              <div><div class="k">Phase Total</div><div class="v">
                ${rands(ph.amountTotal||0)} ${ph.itemsCount?`• ${ph.itemsCount} items`:''}
              </div></div>
            </div>

            <div class="chips">
              ${qs.totalQuotes!=null?`<span class="chip">Quotes T ${qs.totalQuotes}</span>`:''}
              ${qs.Accepted!=null?`<span class="chip">Acc ${qs.Accepted}</span>`:''}
              ${qs.Sent!=null?`<span class="chip">Sent ${qs.Sent}</span>`:''}
              ${qs.InReview!=null?`<span class="chip">InRev ${qs.InReview}</span>`:''}
              ${qs.Draft!=null?`<span class="chip">Draft ${qs.Draft}</span>`:''}
              ${qs.Rejected!=null?`<span class="chip">Rej ${qs.Rejected}</span>`:''}
              ${sr.New!=null?`<span class="chip">SR New ${sr.New}</span>`:''}
              ${sr.InProgress!=null?`<span class="chip">SR WIP ${sr.InProgress}</span>`:''}
              ${sr.Closed!=null?`<span class="chip">SR Closed ${sr.Closed}</span>`:''}
              ${cs.assignedCount!=null?`<span class="chip">Ctrs ${cs.assignedCount}</span>`:''}
            </div>
          </div>
        `;
      }).join('');

      return `
        <div class="ph-col">
          <div class="ph-head">
            <div class="ph-title">${name}</div>
            <div class="ph-count">${items.length} project${items.length===1?'':'s'}</div>
          </div>
          <div class="ph-list">${cards || '<div class="proj-sub" style="padding:8px">No projects in this phase.</div>'}</div>
        </div>
      `;
    };

    mount.innerHTML = ordered.map(colHtml).join('');
  })();
  </script>
</div>
