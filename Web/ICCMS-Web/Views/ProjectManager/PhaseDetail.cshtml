@model ICCMS_Web.Models.PhaseDetailViewModel

@{
    ViewData["Title"] = $"Phase: {Model.Phase.Name}";
    Layout = "_Layout";
}

<div class="pm-project-detail-container">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "ProjectManager")" class="text-decoration-none">
                    <i class="fa-solid fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("ProjectDetail", "ProjectManager", new { projectId = Model.Project.ProjectId })" class="text-decoration-none">
                    <i class="fa-solid fa-project-diagram"></i> @Model.Project.Name
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fa-solid fa-layer-group"></i> @Model.Phase.Name
            </li>
        </ol>
    </nav>

    <!-- Phase Information Header -->
    <div class="row mb-4 pm-project-header">
        <div class="col-md-8">
            <h4 class="mb-2">@Model.Phase.Name</h4>
            <p class="mb-1">Phase ID: <span>@Model.Phase.PhaseId</span></p>
            <p class="mb-0">Description: <span>@Model.Phase.Description</span></p>
        </div>
        <div class="col-md-4 text-end">
            <div class="mb-2">
                <span class="badge @Model.GetStatusBadgeClass(Model.Phase.Status) me-2">@Model.Phase.Status</span>
                <span class="badge pm-badge-secondary">@Model.Progress% Complete</span>
            </div>
            <small>
                <i class="fa-solid fa-calendar me-1"></i>
                <span>@Model.Phase.StartDate.ToString("dd MMM yyyy")</span> -
                <span>@Model.Phase.EndDate.ToString("dd MMM yyyy")</span>
            </small>
        </div>
    </div>

    <!-- Progress Section -->
    <div class="row mb-4 pm-progress-section">
        <div class="col-md-6">
            <h6 class="mb-2">Phase Progress</h6>
            <div class="progress mb-2 pm-progress">
                <div class="progress-bar bg-info pm-progress-bar" role="progressbar"
                    style="width: @($"{Model.Progress}%")" aria-valuenow="@Model.Progress"
                    aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <small>@($"{Model.Progress}%") Complete</small>
        </div>
        <div class="col-md-6">
            <h6 class="mb-2">Task Completion</h6>
            <div class="progress mb-2 pm-progress">
                <div class="progress-bar bg-success pm-progress-bar" role="progressbar"
                    style="width: @(Model.TotalTasks > 0 ? (Model.CompletedTasks * 100 / Model.TotalTasks) : 0)%"></div>
            </div>
            <small>@Model.CompletedTasks / @Model.TotalTasks tasks completed</small>
        </div>
    </div>

    <!-- Phase Information Cards -->
    <div class="row mb-4 pm-middle-section">
        <div class="col-md-6 mb-4">
            <div class="pm-budget-section mb-4">
                <h6 class="mb-2">Budget Information</h6>
                <div class="card pm-budget-card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <small>Phase Budget</small>
                                <div class="fw-bold">R @Model.Phase.Budget.ToString("N0")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pm-stats-section">
                <h6 class="mb-2">Phase Statistics</h6>
                <div class="card pm-stats-card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <small>Total Tasks</small>
                                <div class="fw-bold">@Model.TotalTasks</div>
                            </div>
                            <div class="col-md-6">
                                <small>Completed</small>
                                <div class="fw-bold pm-stats-completed">@Model.CompletedTasks</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card pm-stats-card">
                <div class="card-body">
                    <h6 class="mb-3">Timeline Information</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <small>Start Date</small>
                            <div class="fw-bold">@Model.Phase.StartDate.ToString("dd MMM yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <small>End Date</small>
                            <div class="fw-bold">@Model.Phase.EndDate.ToString("dd MMM yyyy")</div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Phase.AssignedTo))
                    {
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <small>Assigned To</small>
                                <div class="fw-bold">@Model.GetContractorName(Model.Phase.AssignedTo)</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks Section -->
    <div class="mb-4 pm-tasks-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0">
                <i class="fa-solid fa-tasks me-2"></i>Phase Tasks
                <span class="badge pm-badge-secondary">@Model.Tasks.Count</span>
            </h6>
        </div>

        <div id="tasksContainer">
            @if (Model.Tasks.Any())
            {
                @foreach (var task in Model.Tasks)
                {
                    <div class="card mb-3 pm-task-card @(Model.IsTaskOverdue(task) ? "overdue" : "")"
                        data-task-id="@task.TaskId" data-phase-id="@task.PhaseId">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="mb-1">@task.Name</h6>
                                    <p class="mb-1">@task.Description</p>
                                    <div class="mb-2">
                                        <span class="badge @Model.GetTaskStatusBadgeClass(task.Status) me-2">@task.Status</span>
                                        <span class="badge @Model.GetPriorityBadgeClass(task.Priority) me-2">@task.Priority</span>
                                        <small>
                                            <i class="fa-solid fa-calendar me-1"></i>
                                            @task.StartDate.ToString("dd MMM yyyy") - @task.DueDate.ToString("dd MMM yyyy")
                                        </small>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <small>Assigned To</small>
                                            <div class="fw-bold">@Model.GetContractorName(task.AssignedTo)</div>
                                        </div>
                                        <div class="col-md-6">
                                            <small>Estimated Hours</small>
                                            <div class="fw-bold">@task.EstimatedHours hours</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="mb-2">
                                        <a href="@Url.Action("TaskDetail", "ProjectManager", new { projectId = Model.Project.ProjectId, taskId = task.TaskId })" 
                                           class="btn btn-sm pm-btn-outline-info me-1">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                    </div>
                                    <div class="progress mb-1 pm-progress">
                                        <div class="progress-bar pm-progress-bar" style="width: @(task.Progress)%"></div>
                                    </div>
                                    <small>@(task.Progress)% Complete</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fa-regular fa-clipboard"></i>
                    <p>No tasks in this phase</p>
                    <small>Tasks assigned to this phase will appear here</small>
                </div>
            }
        </div>
    </div>
</div>

<!-- Include CSS -->
<link rel="stylesheet" href="~/css/pm-project-detail.css" />
<link rel="stylesheet" href="~/css/modal-design-system.css" />

