@model ICCMS_Web.Models.CreateProjectViewModel
@{
    ViewData["Title"] = "Create New Project";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- ðŸ”” TEMP MESSAGES -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center py-3 rounded-top-4">
            <h3 class="fw-bold mb-0"><i class="bi bi-folder-plus"></i> Create New Project</h3>
        </div>

        <div class="card-body px-4 py-5">
            <form asp-action="CreateProject" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                @Html.AntiForgeryToken()

                <div class="row g-4">
                    <!-- PROJECT NAME -->
                    <div class="col-md-6">
                        <label asp-for="Project.Name" class="form-label fw-semibold">Project Name</label>
                        <input asp-for="Project.Name" class="form-control form-control-lg rounded-3" placeholder="Enter project title" required />
                        <span asp-validation-for="Project.Name" class="text-danger"></span>
                    </div>

                    <!-- CLIENT -->
                    <div class="col-md-6">
                        <label asp-for="Project.ClientId" class="form-label fw-semibold">Client</label>
                        <select asp-for="Project.ClientId" class="form-select form-select-lg rounded-3" required>
                            <option value="">Select a client...</option>
                            @foreach (var client in Model.Clients)
                            {
                                <option value="@client.UserId">@client.FullName (@client.Email)</option>
                            }
                        </select>
                        <span asp-validation-for="Project.ClientId" class="text-danger"></span>
                    </div>

                    <!-- BUDGET -->
                    <div class="col-md-6">
                        <label asp-for="Project.BudgetPlanned" class="form-label fw-semibold">Planned Budget (R)</label>
                        <input asp-for="Project.BudgetPlanned" type="number" min="0" step="0.01" class="form-control form-control-lg rounded-3" placeholder="e.g. 150000.00" required />
                        <span asp-validation-for="Project.BudgetPlanned" class="text-danger"></span>
                    </div>

                    <!-- STATUS -->
                    <div class="col-md-6">
                        <label asp-for="Project.Status" class="form-label fw-semibold">Status</label>
                        <input asp-for="Project.Status" class="form-control form-control-lg rounded-3" readonly />
                    </div>

                    <!-- START DATE -->
                    <div class="col-md-6">
                        <label asp-for="Project.StartDate" class="form-label fw-semibold">Start Date</label>
                        <input asp-for="Project.StartDate" type="date"
                            value="@Model.Project.StartDate.ToString("yyyy-MM-dd")"
                            class="form-control form-control-lg rounded-3" required />
                        <span asp-validation-for="Project.StartDate" class="text-danger"></span>
                    </div>

                    <!-- END DATE -->
                    <div class="col-md-6">
                        <label asp-for="Project.EndDatePlanned" class="form-label fw-semibold">Planned End Date</label>
                        <input asp-for="Project.EndDatePlanned" type="date"
                            value="@Model.Project.EndDatePlanned.ToString("yyyy-MM-dd")"
                            class="form-control form-control-lg rounded-3" required />
                        <span asp-validation-for="Project.EndDatePlanned" class="text-danger"></span>
                    </div>

                    <!-- DESCRIPTION -->
                    <div class="col-12">
                        <label asp-for="Project.Description" class="form-label fw-semibold">Description</label>
                        <textarea asp-for="Project.Description" class="form-control form-control-lg rounded-3" rows="4" placeholder="Briefly describe the project goals, scope, and deliverables..."></textarea>
                        <span asp-validation-for="Project.Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- ACTION BUTTONS -->
                <div class="text-center mt-5">
                    <a asp-action="Dashboard" class="btn btn-outline-secondary btn-lg px-5 me-3 rounded-3">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-warning btn-lg text-dark px-5 fw-bold rounded-3 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Create Project
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
