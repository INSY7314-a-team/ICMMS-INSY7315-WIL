@model ICCMS_Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Project Manager Dashboard";
    Layout = "_Layout";
}

<div class="container my-4">
    <h1 class="fw-bold mb-3">Project Manager Dashboard</h1>
    <p class="text-muted">Track and manage projects, quotations, clients, and contractors.</p>

    <div class="row g-4">

        <!-- Projects Card -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Projects (@Model.TotalProjects)</h5>
                    <div class="input-group input-group-sm" style="width: 200px;">
                        <input type="text" class="form-control" placeholder="Search..." id="search-projects" />
                        <button class="btn btn-outline-secondary btn-sm">Go</button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Start</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.RecentProjects)
                            {
                                <tr>
                                    <td>@p.Name</td>
                                    <td>@p.Status</td>
                                    <td>@p.StartDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="ProjectManager" asp-action="CreateProject" class="btn btn-sm btn-primary">+ New Project</a>
                    <a asp-controller="ProjectManager" asp-action="Dashboard" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
            </div>
        </div>

        <!-- Quotes Card -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Quotations (@Model.TotalQuotes)</h5>
                    <div class="input-group input-group-sm" style="width: 200px;">
                        <input type="text" class="form-control" placeholder="Search..." id="search-quotes" />
                        <button class="btn btn-outline-secondary btn-sm">Go</button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var q in Model.RecentAcceptedQuotes)
                            {
                                <tr>
                                    <td>@q.Description</td>
                                    <td>@q.Status</td>
                                    <td>R @q.GrandTotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <!-- ðŸ”‘ Wire into new CreateDraft workflow -->
                    <a asp-controller="Quotes" asp-action="CreateDraft" class="btn btn-sm btn-primary">+ New Quote</a>
                    <a asp-controller="Quotes" asp-action="Index" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
            </div>
        </div>

        <!-- Clients Card -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Clients (@Model.TotalClients)</h5>
                    <div class="input-group input-group-sm" style="width: 200px;">
                        <input type="text" class="form-control" placeholder="Search..." id="search-clients" />
                        <button class="btn btn-outline-secondary btn-sm">Go</button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.RecentClients)
                            {
                                <tr>
                                    <td>@c.FullName</td>
                                    <td>@c.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Users" asp-action="Clients" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
            </div>
        </div>

        <!-- Contractors Card -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Contractors (@Model.TotalContractors)</h5>
                    <div class="input-group input-group-sm" style="width: 200px;">
                        <input type="text" class="form-control" placeholder="Search..." id="search-contractors" />
                        <button class="btn btn-outline-secondary btn-sm">Go</button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var co in Model.RecentContractors)
                            {
                                <tr>
                                    <td>@co.FullName</td>
                                    <td>@co.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Users" asp-action="Contractors" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
            </div>
        </div>

    </div>
</div>
