@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h2 class="fw-bold mb-4"><i class="fa-solid fa-gauge text-warning"></i> Dashboard Overview</h2>

    <!-- === SUMMARY CARDS === -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-diagram-project fa-2x text-primary mb-2"></i>
                    <h5 class="fw-bold">Active Projects</h5>
                    <p class="display-6 text-dark">--</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-file-invoice fa-2x text-success mb-2"></i>
                    <h5 class="fw-bold">Pending Quotes</h5>
                    <p class="display-6 text-dark">--</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-users fa-2x text-info mb-2"></i>
                    <h5 class="fw-bold">Clients</h5>
                    <p class="display-6 text-dark">--</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-helmet-safety fa-2x text-warning mb-2"></i>
                    <h5 class="fw-bold">Contractors</h5>
                    <p class="display-6 text-dark">--</p>
                </div>
            </div>
        </div>
    </div>

    <!-- === PLACEHOLDERS FOR FUTURE CHARTS === -->
    <div class="row mt-5">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="fa-solid fa-chart-line me-2 text-primary"></i> Project Progress Overview
                </div>
                <div class="card-body">
                    <p class="text-muted">Chart coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="fa-solid fa-coins me-2 text-success"></i> Financial Snapshot
                </div>
                <div class="card-body">
                    <p class="text-muted">Chart coming soon...</p>
                </div>
            </div>
        </div>
    </div>
</div>
