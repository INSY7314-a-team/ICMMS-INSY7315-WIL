<script src="~/js/pm-approval-actions.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Approvals: Accept/Reject Task Completion Reports
        document.addEventListener('click', async function (e) {
            const approveBtn = e.target.closest('.approve-completion-btn');
            const rejectBtn = e.target.closest('.reject-completion-btn');
            if (!approveBtn && !rejectBtn) return;

            const isApprove = !!approveBtn;
            const button = isApprove ? approveBtn : rejectBtn;
            const taskId = button.getAttribute('data-task-id');
            if (!taskId) return;

            button.disabled = true;
            const originalHtml = button.innerHTML;
            button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>' + (isApprove ? ' Approving...' : ' Rejecting...');

            try {
                const url = isApprove
                    ? `/ProjectManager/ApproveTaskCompletion?taskId=${encodeURIComponent(taskId)}`
                    : `/ProjectManager/RejectTaskCompletion?taskId=${encodeURIComponent(taskId)}`;
                const res = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': (document.querySelector('input[name="__RequestVerificationToken"]') || {}).value || ''
                    }
                });
                const data = await res.json().catch(() => ({ success: false }));
                if (res.ok && data && data.success !== false) {
                    const item = button.closest('.completion-item');
                    if (item) item.remove();
                } else {
                    alert(`Failed to ${isApprove ? 'approve' : 'reject'} completion`);
                    button.disabled = false;
                    button.innerHTML = originalHtml;
                }
            } catch (err) {
                console.error(err);
                alert('Network error. Please try again.');
                button.disabled = false;
                button.innerHTML = originalHtml;
            }
        });
    });
</script>
