@model ICCMS_Web.Models.UserDto

@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-user-times me-2"></i>Delete User
                        </h3>
                        <a href="@Url.Action("GetUsers", "Users")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Users
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                        </h4>
                        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Full Name:</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Phone) ? "No phone" : Model.Phone)</dd>

                                <dt class="col-sm-4">Role:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var roleBadgeClass = Model.Role.ToLower() switch
                                        {
                                            "admin" => "bg-danger",
                                            "manager" => "bg-warning",
                                            "user" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @roleBadgeClass">@Model.Role</span>
                                </dd>

                                <dt class="col-sm-4">Created:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("GetUsers", "Users")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

    .alert {
        border-radius: 0.375rem;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: none;
    }

    .btn-danger:hover {
        background: linear-gradient(135deg, #c82333 0%, #a71e2a 100%);
    }
</style>
