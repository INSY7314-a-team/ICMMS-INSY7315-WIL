@model ICCMS_Web.Models.UserDto

@{
    ViewData["Title"] = "Delete User";
    Layout = "_Layout";
}

<div class="user-management-container">
    <div class="row">
        <div class="col-12">
            <div class="user-form-container">
                <div class="user-form-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="user-form-title">
                            <i class="fas fa-user-times me-2"></i>Delete User
                        </h3>
                        <a href="@Url.Action("Index", "Users")" class="user-btn user-btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Users
                        </a>
                    </div>
                </div>
                <div class="user-form-body">
                    <div class="user-alert user-alert-danger">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                        </h4>
                        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4" style="color: #F7EC59;">Full Name:</dt>
                                <dd class="col-sm-8" style="color: #FFFFFF;">@Model.FullName</dd>

                                <dt class="col-sm-4" style="color: #F7EC59;">Email:</dt>
                                <dd class="col-sm-8" style="color: #FFFFFF;">@Model.Email</dd>

                                <dt class="col-sm-4" style="color: #F7EC59;">Phone:</dt>
                                <dd class="col-sm-8" style="color: #FFFFFF;">@(string.IsNullOrEmpty(Model.Phone) ? "No phone" : Model.Phone)</dd>

                                <dt class="col-sm-4" style="color: #F7EC59;">Role:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var roleBadgeClass = Model.Role.ToLower() switch
                                        {
                                            "admin" => "admin",
                                            "project manager" => "manager",
                                            "contractor" => "contractor",
                                            "client" => "client",
                                            _ => "admin"
                                        };
                                    }
                                    <span class="user-badge @roleBadgeClass">@Model.Role</span>
                                </dd>

                                <dt class="col-sm-4" style="color: #F7EC59;">Created:</dt>
                                <dd class="col-sm-8" style="color: #FFFFFF;">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@Url.Action("Index", "Users")" class="user-btn user-btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="user-btn user-btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include User Management CSS -->
<link rel="stylesheet" href="~/css/user-management.css" />
